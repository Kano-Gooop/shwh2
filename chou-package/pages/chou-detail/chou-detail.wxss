@import '/wxParse/wxParse.wxss';

.page {
    padding-bottom: 110rpx;
    box-sizing: border-box;
}

.chou-header {
    border-bottom: 12rpx solid rgba(0, 0, 0, 0.05);
}

.chou-header .banner {
    width: 100%;
    height: 375rpx;
    vertical-align: bottom;
}

