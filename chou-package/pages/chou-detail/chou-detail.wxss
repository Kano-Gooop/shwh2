.chou-header .under-banner {
    padding: 23rpx 24rpx 40rpx;
}

.chou-header .title {
    line-height: 1;
    font-size: 32rpx;
    letter-spacing: 1rpx;
    color: #333;
}

.chou-header .auth-line {
    margin-top: 60rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.chou-header .auth-line .left {
    display: flex;
    align-items: center;
}

.chou-header .auth-line .left .header {
    width: 60rpx;
    height: 60rpx;
    background: #eee;
    border-radius: 50%;
}

.chou-header .auth-line .left .nickname {
    margin-left: 24rpx;
    font-size: 24rpx;
    color: #000;
    opacity: 0.8;
}

.chou-header .auth-line .zhi-count {
    color: #000;
    font-size: 26rpx;
}

.chou-header .progress-box {
    margin-top: 63rpx;
}

.chou-header .progress-box .progress {
    height: 10rpx;
    background: #dcdcdc;
    position: relative;
    border-radius: 5rpx;
}

.chou-header .progress-box .progress .progress-active {
    height: 10rpx;
    position: absolute;
    left: 0;
    top: 0;
    background: #f39800;
    border-radius: 5rpx;
}

.chou-header .progress-box .info {
    margin-top: 24rpx;
    display: flex;
    justify-content: space-between;
}

.chou-header .progress-box .info > view {

}

.chou-header .progress-box .info .bi {
    font-size: 26rpx;
    color: #000;
    font-weight: bold;
}

.chou-header .progress-box .info .desc {
    font-size: 24rpx;
    color: #010101;
    opacity: 0.4;
    margin-top: 16rpx;
}

.chou-header .progress-box .info .already {
    text-align: left;
}

.chou-header .progress-box .info .already .bi {
    color: #f39800;
}

.chou-header .progress-box .info .target {
    text-align: center;
}

.chou-header .progress-box .info .remaining {
    text-align: right;
}

.ac-detail {
    border-bottom: 12rpx solid rgba(0, 0, 0, 0.05);
}

.ac-detail .desc {

}

.work-box .work .under {
    margin-top: 0;
}

.bottom-btn-box {
    position: fixed;
    width: 100%;
    bottom: 0;
    display: flex;
}

.bottom-btn-box button {
    flex-grow: 1;
    width: 0;
    height: 98rpx;
    line-height: 98rpx;
    padding: 0;
    border-radius: 0;
    font-size: 32rpx;
    color: rgba(255, 255, 255, 0.8);
    text-align: center;
}

.bottom-btn-box .share {
    background: #3dd178;
}

.bottom-btn-box .chou {
    background: #ff7d01;
}