<view class="page">
  <!-- 头部标题 -->
  <view class="top-title">请填写申请必要信息</view>

  <!-- 表单 -->
  <view class="form">
    <view class="form-item">
      <label for="company">公司名称</label>
      <view class="value-box">
        <input bindinput="bind_input" data-name="company" value="{{company}}" type="text" id="company" placeholder="请输入公司全称" maxlength="50" />
      </view>
    </view>

    <view class="form-item">
      <label for="title">众筹名称</label>
      <view class="value-box">
        <input bindinput="bind_input" data-name="title" value="{{title}}" type="text" id="title" placeholder="请输入众筹名称" maxlength="50" />
      </view>
    </view>

    <view class="form-item">
      <label for="name">联系人</label>
      <view class="value-box">
        <input bindinput="bind_input" data-name="name" value="{{name}}" type="text" id="name" placeholder="请输入联系人" maxlength="20" />
      </view>
    </view>

    <view class="form-item">
      <label for="tel">联系电话</label>
      <view class="value-box">
        <input  bindinput="bind_input" data-name="tel" value="{{tel}}" type="text" id="tel" placeholder="请输入联系电话号码" maxlength="11" />
      </view>
    </view>

    <view class="form-item code">
      <label for="code">验证码</label>
      <view class="value-box">
        <input bindinput="bind_input" data-name="code" value="{{code}}" type="text" id="code" placeholder="请输入验证码" maxlength="6" />
        <button bindtap="sendSms" class="code-btn" disabled="{{code_disabled}}">{{code_text}}</button>
      </view>
    </view>

    <view class="form-item">
      <label for="email">邮箱</label>
      <view class="value-box">
        <input bindinput="bind_input" data-name="email" value="{{email}}" type="text" id="email" placeholder="请输入邮箱" maxlength="100" />
      </view>
    </view>
  </view>
    <button bindtap="fundingRelease" class="sub-btn">提交申请</button>
</view>