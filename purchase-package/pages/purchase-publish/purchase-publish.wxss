.page {
  padding-bottom: 120rpx;
}

.form {
}

.form .block-title {
  padding-bottom: 24rpx;
  border-bottom: 4rpx solid rgba(0, 0, 0, 0.05);
  font-size: 32rpx;
  text-align: center;
  color: #101010;
}

.form .form-block:first-child {
  margin-top: 0;
}

.form .form-block {
  padding: 40rpx 24rpx 0;
  margin-top: 20rpx;
}

.form-item {
  border-bottom: 2rpx solid #f5f5f5;
  padding-bottom: 40rpx;
  padding-top: 40rpx;
}

.form-item .label {
  font-size: 34rpx;
  color: #999;
}

.form-item .value-box {
}

.price-area {
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price-area .min, .price-area .max {
  width: 320rpx;
  height: 80rpx;
  font-size: 34rpx;
  color: #333;
  box-sizing: border-box;
  border: 2rpx solid rgba(0, 0, 0, 0.05);
  text-align: center;
}

.price-area .min {
}

.price-area .to {
  width: 38rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: #f2f2f2;
}

.price-area .max {
}

.form-item .value-box .line {
  margin-top: 40rpx;
  font-size: 34rpx;
}

.form-item .value-box textarea {
  font-size: 34rpx;
  margin-top: 40rpx;
  color: #333;
  width: 100%;
  min-height: 150rpx;
}

.pian-box {
  margin-top: 40rpx;
}

.pian-box .pian:first-child {
  margin-top: 0;
}

.pian-box .pian {
  margin-top: 40rpx;
  display: flex;
  border: 2rpx solid rgba(0, 0, 0, 0.05);
  border-radius: 8rpx;
  height: 98rpx;
  box-sizing: border-box;
}

.pian-box .pian .pian-item:first-child {
  border-radius: 8rpx 0 0 8rpx;
}

.pian-box .pian .pian-item {
  width: 0;
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  color: #333;
  box-sizing: border-box;
  border-right: 2rpx solid rgba(0, 0, 0, 0.05);
}

.pian-box .pian .pian-item:last-child {
  border-radius: 0 8rpx 8rpx 0;
  border-right: none;
}

.pian-box .pian .pian-item.active {
  background: #ffb246;
  border-color: #ffb246;
  margin: -2rpx;
}

.up-pic {
}

.sub-btn {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  background: #fcd530;
  font-size: 36rpx;
  color: #333;
  border-radius: 0;
  z-index: 1;
}
