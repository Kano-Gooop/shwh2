.page {
  padding-bottom: 80rpx;
}

.title-box {
  padding: 24rpx 24rpx 36rpx;
}

.title-box .title {
  font-size: 28rpx;
  color: #101010;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f5f5f5;
  line-height: 1.4;
}

.title-box .price {
  margin-top: 24rpx;
  font-size: 32rpx;
  color: #ff6944;
}

.ask-box {
}

.ask-box > .title {
  background: #ededed;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #101010;
}

.ask-box .info {
  padding: 24rpx;
}

.ask-box .info .item:first-child {
  margin-top: 0;
}

.ask-box .info .item {
  margin-top: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f5f5f5;
  display: flex;
  font-size: 28rpx;
  justify-content: space-between;
}

.ask-box .item .label {
  color: #999;
}

.ask-box .item .value {
  color: #ff6944;
}

.ask-box .pics {
  margin-top: 24rpx;
}

.ask-box .pics .label {
  font-size: 28rpx;
  color: #999;
}

.ask-box .pics .ppic-box {
  margin-top: 24rpx;
  flex-wrap: wrap;
  display: flex;
  justify-content: space-between;
}

.ask-box .pics .ppic-box .pic {
  width: 218rpx;
  height: 218rpx;
  margin-top: 24rpx;
}

.ask-box .pics .ppic-box .pic:nth-child(-n + 3) {
  margin-top: 0;
}

.ex-box {
}

.ex-box > .title {
  background: #ededed;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #101010;
}

.ex-box .desc {
  color: #2784FF;
  line-height: 1.5;
  font-size: 28rpx;
  padding: 17rpx 24rpx;
}

.contact-btn {
  position: fixed;
  width: 100%;
  box-sizing: border-box;
  left: 0;
  bottom: 0;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ff4f24;
}

.contact-btn .icon {
  width: 24rpx;
  height: 24rpx;
}

.contact-btn .text {
  font-size: 28rpx;
  color: #fff;
  margin-left: 24rpx;
}