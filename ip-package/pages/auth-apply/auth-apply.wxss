.page {
  padding-bottom: 120rpx;
}

.top-title {
  padding: 40rpx 0 24rpx;
  margin: 0 24rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
  font-size: 32rpx;
  text-align: center;
  color: #333;
}

.form {
  padding: 40rpx 24rpx;
}

.form-item:first-child {
  margin-top: 0;
}

.form-item {
  margin-top: 40rpx;
  padding-bottom: 40rpx;
  font-size: 34rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.form-item.code {
  padding-bottom: 20rpx;
}

.form-item label {
  display: block;
  color: #999;
}


.form-item .value-box {
  margin-top: 40rpx;
  display: flex;
  align-items: center;
}

.form-item .value-box input {
  color: #333;
  flex-grow: 1;
}


.form-item .value-box .code-btn {
  width: 200rpx;
  height: 80rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
  box-sizing: border-box;
  border-radius: 8rpx;
  border: 2rpx solid #333;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333;
  background: #fff;
}

.sub-btn {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  background: #fcd530;
  font-size: 36rpx;
  color: #333;
  border-radius: 0;
  z-index: 2;
}