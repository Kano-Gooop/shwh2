@import '/wxParse/wxParse.wxss';

view {
  overflow: visible;
}

.page {
  padding-bottom: 98rpx;
}

.main {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.main .info-box {
  flex-grow: 1;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.main .info-box .bg-box {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.main .info-box .bg-box .bg {
  filter: blur(4rpx);
  width: 100%;
  height: 100%;
  transform: scale(1.1);
}

.main .info-box .bg-box .mask {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.main .info-box .info {
  position: relative;
  z-index: 1;
  color: #fff;
  padding: 0 24rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.info .info-line {
  display: flex;
  margin-bottom: 20rpx;
}

.info .info-line:last-child {
  margin-bottom: 0;
}

.info .info-line .label {
  flex-shrink: 0;
  width: 160rpx;
  height: 42rpx;
  text-align: justify;
  overflow: hidden;
}

.info .info-line .label::after {
  content: "";
  display: inline-block;
  width: 100%;
}

.info .info-line .value {
  flex-grow: 1;
  margin-left: 24rpx;
}

.main .butt-bar {
  flex-shrink: 0;
  background: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
  height: 98rpx;
  z-index: 1;
}

.main .butt-bar .title {
  flex-grow: 1;
  font-size: 32rpx;
  color: #fff;
}

.main .butt-bar .look {
  margin-left: 20rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
}

.butt-bar .look .icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.butt-bar .look .text {
  color: #51d07c;
  font-size: 28rpx;
}

.intro {
  margin-top: 48rpx;
  padding: 0 24rpx;
}

.ye-title {
  text-align: center;
  color: #101010;
  font-size: 32rpx;
  position: relative;
  font-weight: bold;
}

.ye-title::after {
  content: '';
  width: 40rpx;
  height: 8rpx;
  border-radius: 10rpx;
  background: #fcd530;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  bottom: -20rpx;
}

.intro .text {
  margin-top: 40rpx;
  font-size: 28rpx;
  line-height: 1.5;
  color: #666;
}

.rich {
  margin-top: 44rpx;
}

.rich .content-wrapper {
  margin-top: 40rpx;
  padding: 0 24rpx 40rpx;
}

.fixed-bottom {
  display: flex;
  height: 98rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  box-shadow: 0 4rpx 12rpx 0 rgba(217, 217, 217, 1);
  z-index: 2;
}

.fixed-bottom .share {
  width: 0;
  flex-grow: 1;
  display: flex;
  align-items: center;
  padding: 0 0 0 32rpx;
  margin: 0;
  box-shadow: none;
  box-sizing: border-box;
  background: #fff;
  border-radius: 0;
}

.fixed-bottom .share .icon {
  width: 38rpx;
  height: 38rpx;
}

.fixed-bottom .share .text {
  margin-left: 18rpx;
  color: #101010;
  font-size: 28rpx;
}

.fixed-bottom .go {
  width: 0;
  flex-grow: 1;
  line-height: 98rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  background: #34a8ae;
}
