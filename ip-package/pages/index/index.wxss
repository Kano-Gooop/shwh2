.search-wrapper {
  padding: 14rpx 24rpx;
}

.search-wrapper .search-box {
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
}

.search-wrapper .search-box .zoom {
  width: 30rpx;
  height: 30rpx;
  flex-shrink: 0;
}

.search-wrapper .search-box .search {
  margin-left: 10rpx;
  flex-grow: 1;
  font-size: 28rpx;
}

