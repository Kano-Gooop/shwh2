.banner {
  width: 100%;
  height: 400rpx;
}

.banner .si {
  width: 100%;
}

.banner .si image {
  width: 100%;
  height: 100%;
}

.top-tab {
  width: 100%;
  color: #333;
  background: #eee;
  white-space: nowrap;
  height: 88rpx;
  box-sizing: border-box;
}

.top-tab .tab-item {
  font-size: 28rpx;
  padding: 0 20rpx;
  display: inline-block;
  height: 88rpx;
  box-sizing: border-box;
  line-height: 88rpx;
}

.top-tab .tab-item.active {
  font-size: 32rpx;
  position: relative;
  font-weight: bold;
}

.top-tab .tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 28rpx;
  height: 8rpx;
  border-radius: 8rpx;
  background-color: rgba(255, 134, 49, 1);
  border: 2rpx solid rgba(255, 255, 255, 0);
  margin: auto;
  box-sizing: border-box;
}

.ip-list {
  padding: 24rpx 24rpx 0;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.ip-list .ip:nth-child(-n + 2) {
  margin-top: 0;
}

.ip-list .ip {
  margin-top: 40rpx;
}

.ip-list .ip .cover {
  width: 340rpx;
  height: 510rpx;
  vertical-align: bottom;
  border-radius: 8rpx;
}

.ip-list .ip .info {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.ip-list .ip .info .title {
  width: 0;
  flex-grow: 1;
  font-size: 28rpx;
  color: #101010;
}

.ip-list .ip .info .cate {
  flex-shrink: 0;
  margin-left: 15rpx;
  font-size: 24rpx;
  color: #666;
}