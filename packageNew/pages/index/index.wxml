<view class="page">
  <view class="top">
    <!-- 顶部搜索框和消息 -->
    <view class="search-box">
      <view class="search">
        <image src="../../icons/zoom.png"></image>
        <view class="placeholder">搜索</view>
      </view>
      <view class="message">
        <image src="../../icons/bell.png" class="bell"></image>
        <view class="has"></view>
      </view>
    </view>

    <!-- 商品分类滚动条 -->
    <scroll-view scroll-x class="tab">
      <view class="tab-item {{active_tab == -1 ? 'active' : ''}}" bindtap="all_goods" data-index="{{index}}">
        全部
      </view>
      <view class="tab-item active">推荐</view>
      <view class="tab-item">收藏馈赠</view>
      <view class="tab-item">商品配饰</view>
      <view class="tab-item">居家生活</view>
      <view class="tab-item">服饰箱包</view>
      <view class="tab-item">收藏馈赠</view>
      <view class="tab-item">商品配饰</view>
      <view class="tab-item">居家生活</view>
      <view class="tab-item">服饰箱包</view>
    </scroll-view>
  </view>

  <!-- 主页 -->
  <view class="home">
    <!-- 轮播 -->
    <view class="swiper-box">
      <image src="../../images/home-bg.png" class="home-bg"></image>
      <swiper indicator-dots="{{true}}"
              autoplay="{{true}}"
              circular="{{true}}"
              class="banner">
        <swiper-item wx:for="{{[0, 1, 2, 3, 4]}}">
          <image bindtap="jump" data-page="gg-detail?id={{item.url}}" data-url="{{item.url}}" src="../../images/t-banner.jpg"></image>
        </swiper-item>
      </swiper>
    </view>

    <!-- 新人必买榜 -->
    <view class="must-buy">
      <view class="title">新人必买榜TOP100</view>
      <view class="must-wrapper">
        <view class="must-list" wx:for="{{[0, 1, 2, 3, 4]}}">
          <image src="../../images/t-home-cate.png" class="cate"></image>
          <navigator url="" wx:for="{{[0, 1, 2]}}">
            <image src="../../t-goods.jpg" class="goods"></image>
            <view class="goods-title">招财装饰摆件招财装饰摆件招财装饰摆件</view>
          </navigator>
        </view>
      </view>
    </view>

    <!-- 视频精选 -->
    <view class="video-box">
      <view class="title-line">
        <view class="title">视频精选</view>
        <view class="more">
          <view class="text">更多</view>
          <image src="../../icons/right-arrow.png" class="you"></image>
        </view>
      </view>
      <view class="video big-video">
        <view class="cover-box">
          <image src="../../images/t-video-cover.jpg" class="poster"></image>
          <view class="mask">
            <view class="time">
              <image src="../../icons/right-tri.png" class="tri"></image>
              <view class="time-text">00:30</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>