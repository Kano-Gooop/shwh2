.page {
  background: #efeef3;
  color: #666;
}

.order-status {
  background: linear-gradient(to right, #ee5202, #ffa307);
  line-height: 3.5;
  padding-left: 50rpx;
  color: #fff;
  font-size: 28rpx;
}

.user-info {
  background: #fff;
  padding: 25rpx;
}

.user-info .nt {
  display: flex;
  justify-content: space-between;
}

.user-info .nt .name {
}

.user-info .nt .tel {
}

.user-info .address {
  margin-top: 10rpx;
}

.order {
  margin-top: 25rpx;
  padding: 25rpx;
  background: #fff;
}

.order .bian {
  display: flex;
  justify-content: space-between;
}

.order .bian > view {
}

.order .bian .no {
}

.order .bian .copy-btn {
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
  padding: 6rpx 15rpx;
}

.order .time {
  margin-top: 5rpx;
}

.statistics {
  margin-top: 25rpx;
  padding: 25rpx;
  background: #fff;
}

.statistics .line {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.statistics .line .left {
}

.statistics .line .right {
}

.bi {
  margin-right: 3rpx;
}

.statistics .zong {
  border-top: 1rpx solid #ddd;
  padding-top: 18rpx;
  margin-top: 23rpx;
  display: flex;
  justify-content: flex-end;
}

.statistics .zong .label {
  font-size: 28rpx;
  color: #333;
}

.statistics .zong .price {
  color: #fe2043;
  position: relative;
  top: 2rpx;
  font-size: 26rpx;
}

.goods-list {
  padding: 25rpx;
  background: #fff;
  margin-top: 25rpx;
}

.pro {
  display: flex;
}

.pro + .pro {
  margin-top: 25rpx;
  border-top: 1rpx solid #ddd;
  padding-top: 25rpx;
}

.pro .pic {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
}

.pro .info {
  flex-grow: 1;
  margin-left: 15rpx;
  color: #666;
  font-size: 22rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.pro .info .shang {
}

.pro .info .shang .title {
  font-size: 26rpx;
  line-height: 1.4;
}

.pro .info .shang .attr {
  color: #888;
  margin-top: 10rpx;
}

.pro .info .xia {
}

.pro .xia .price {
  text-align: right;
  font-size: 25rpx;
}

.pro .xia .amount {
  text-align: right;
  color: #bbb;
  margin-top: 6rpx;
}

.goods-list .btn-box {
  margin-top: 40rpx;
  display: flex;
  justify-content: flex-end;
}

.goods-list .btn-box .com-btn {
  width: 120rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  background-color: #f8f8f8;
  border-radius: 6rpx;
  border: solid 2rpx #dfdfdf;
  font-size: 26rpx;
  color: #444;
  margin: 0;
  padding: 0;
  font-weight: normal;
  min-height: auto;
}

.goods-list .comment {
  margin-top: 40rpx;
  border-radius: 6rpx;
  border: solid 2rpx #f5f5f5;
  padding: 14rpx 25rpx;
  font-size: 26rpx;
  line-height: 39rpx;
  color: rgba(0, 0, 0, 0.6);
}