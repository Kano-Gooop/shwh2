<view class="page">
  <view class="header">
    <image src="{{factory.cover}}" mode="widthFix"></image>
    <view class="info">
      <view class="up">
        <view class="name">{{factory.org}}</view>
      </view>
      <view class="desc">{{factory.desc}}</view>
    </view>
  </view>
  <view class="tab">
    <view class="tab-item {{active_tab == 1 ? 'active' : ''}}" data-tab="{{1}}" bindtap="tab_change">竞标</view>
    <view class="tab-item {{active_tab == 2 ? 'active' : ''}}" data-tab="{{2}}" bindtap="tab_change">笔记</view>
  </view>
  <view class="block" wx:if="{{active_tab == 1}}">
    <view class="two-box">
      <navigator url="/pages/bidding-detail/bidding-detail?id={{item.work_id}}" data-id="{{item.id}}" class="item-half" wx:for="{{biddingList}}" wx:key="id">
        <image src="{{item.pics[0]}}" mode="aspectFill"></image>
        <view class="texts">
          <view class="title">{{item.work_title}}</view>
          <view class="req-title">“{{item.req_title}}”</view>
        </view>
      </navigator>
    </view>

    <view class="nomore" wx:if="{{bidding_nomore}}">
      已经没有更多了哦
    </view>

    <view class="nodata" wx:if="{{bidding_nodata}}">
      暂无竞标作品
    </view>
  </view>

  <view class="block note-box" wx:if="{{active_tab == 2}}">
    <view class="list">
      <view class="left">
        <navigator url="/pages/note-detail/note-detail?id={{item.id}}" class="note" wx:for="{{left_note_list}}"
                   wx:key="id">
          <view class="img-box" style="padding-bottom: {{(item.height / item.width) * 100}}%;">
            <image src="{{item.pics[0]}}" lazy-load="{{true}}"></image>
          </view>
          <view class="word">
            {{item.title}}
          </view>
          <view class="xia">
            <view class="left">
              <image src="{{item.avatar}}" class="header"></image>
              {{item.nickname}}
            </view>
            <div class="right">
              <icon class="iconfont iconxin2"/>
              {{item.like}}
            </div>
          </view>
        </navigator>
      </view>
      <view class="right">
        <navigator url="/pages/note-detail/note-detail?id={{item.id}}" class="note" wx:for="{{right_note_list}}"
                   wx:key="id">
          <view class="img-box" style="padding-bottom: {{(item.height / item.width) * 100}}%;">
            <image src="{{item.pics[0]}}" lazy-load="{{true}}"></image>
          </view>
          <view class="word">
            {{item.title}}
          </view>
          <view class="xia">
            <view class="left">
              <image src="{{item.avatar}}" class="header"></image>
              {{item.nickname}}
            </view>
            <div class="right">
              <icon class="iconfont iconxin2"/>
              {{item.like}}
            </div>
          </view>
        </navigator>
      </view>
    </view>


    <view class="nomore" wx:if="{{show_nomore}}">
      已经没有更多了哦
    </view>

    <view class="nodata" wx:if="{{show_nodata}}">
      暂无笔记
    </view>
  </view>
</view>