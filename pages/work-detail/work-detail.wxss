.page {
  /*background: #fafafa;*/
  padding-bottom: 20rpx;
  box-sizing: border-box;
  min-height: 100vh;
}

.form1 {
  margin-top: 20rpx;
}

.bidding-box2 {
  margin-top: 40rpx;
}

.bidding-list {
  margin-top: 40rpx;
  background: #fff;
  padding: 24rpx;
}

.bidding-list .bidding {
  margin-bottom: 24rpx;
  border-bottom: 2rpx solid #ddd;
  padding-bottom: 24rpx;
}

.bidding-list .bidding:last-child {
  margin-bottom: 0;
  border-bottom: 0;
  padding-bottom: 0;
}

.bidding-list .bidding .title {
}

.bidding-list .bidding .header {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  align-items: center;
}

.bidding-list .bidding .header .left {
  display: flex;
  align-items: center;
}

.bidding-list .bidding .header .left .head-pic {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.bidding-list .bidding .header .left .org {
}

.bidding-list .bidding .header .choose-btn {
  margin: 0;
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  line-height: 1;
  background: #ffcc06;
  height: auto;
  border-radius: 4rpx;
  color: #333;
}

.bidding-list .bidding .header .choose-btn.choosed {
  background: red;
  color: #eee;
}

.bidding-list .bidding .desc {
  font-size: 26rpx;
  margin-top: 15rpx;
  line-height: 1.4;
}

.bidding-box2 .nodata {
  background: #fff;
}