.page {
}

.support-list {
  padding: 0 25rpx 30rpx;
}

.support {
  padding: 40rpx 0;
  line-height: 1;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.07);
}

.support:last-child {
}

.support .title-line {
  display: flex;
  justify-content: space-between;
}

.support .title-line .left {
  display: flex;
  align-items: center;
}

.support .title-line .left .quan {
  box-sizing: border-box;
  width: 38rpx;
  height: 38rpx;
  border-radius: 50%;
  border: solid 5rpx #ffa55a;
  position: relative;
}

.support .title-line .left .quan.active::after {
  content: '';
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  margin: auto;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: #ffa55a;
  border-radius: 50%;
}

.support .title-line .left .money {
  margin-left: 25rpx;
  color: #333;
  font-size: 34rpx;
}

.support .title-line .yi-zhi {
  font-size: 24rpx;
  color: #ccc;
}

.support .title {
  margin-top: 20rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 1.4;
}

.support .desc {
  font-size: 26rpx;
  line-height: 1.4;
  margin-top: 7px;
  color: #666;
}

.support .img-box {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.support .img-box image {
  margin-bottom: 24rpx;
  width: 142rpx;
  height: 142rpx;
  margin-right: 24rpx;
  border-radius: 4rpx;
}

.support .img-box image:nth-last-child(-n + 4) {
  margin-bottom: 0;
}
