.page {
  line-height: 1;
  padding-bottom: 24rpx;
  box-sizing: border-box;
}

.banner {
}

.banner image {
  vertical-align: bottom;
  width: 750rpx;
  height: 360rpx;
}

.meal-box {
  padding: 40rpx 24rpx 0;
  background: #ededed;
  position: relative;
}

.meal-box .title {
  font-size: 34rpx;
  color: #333;
}

.meal-box .expires {
  font-size: 28rpx;
  color: #eb8d21;
  margin-bottom: 24rpx;
}

.meal-list {
  display: flex;
  justify-content: space-between;
}

.meal-list .meal {
  position: relative;
  width: 227rpx;
  height: 135rpx;
  border-radius: 4rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.meal-list .meal.active {
  z-index: 2;
}

.meal .bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.meal .texts {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.meal .texts .r-title {
  font-size: 22rpx;
  color: #fff;
}

.meal .texts .price-wrap {
  margin-top: 16rpx;
  display: flex;
  align-items: flex-end;
}

.meal .texts .price-wrap .price {
  font-size: 26rpx;
  color: #fff;
}

.meal .texts .price-wrap .unit {
  margin-left: 6rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
}

.meal-box .tiao {
  width: 100%;
  height: 20rpx;
  background: #fff;
  position: absolute;
  left: 0;
  bottom: -10rpx;
  z-index: 1;
}

.validate-box {
  margin-top: 40rpx;
  padding: 0 24rpx;
}

.validate-box .title {
  font-size: 34rpx;
  color: #333;
}

.validate-box .buy-btn {
  height: 90rpx;
  margin: 46rpx 0 0 0;
  padding: 0;
  border: 0;
  background: #c3a581;
  border-radius: 10rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  color: #ededed;
  box-shadow: 0 10rpx 24rpx 0 rgba(192, 160, 123, 0.75);
}

.validate-box .buy-btn[disabled] {
  background: #bbb;
}

.qy {
  margin-top: 80rpx;
  padding: 0 24rpx;
}

.qy .title {
  font-size: 34rpx;
  color: #333;
}

.qy image {
  width: 100%;
  vertical-align: bottom;
  margin-top: 24rpx;
}
