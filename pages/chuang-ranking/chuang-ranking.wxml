<view class="page">
  <view class="chuang-rank-list">
    <navigator url="/pages/chuang-detail/chuang-detail?idea_id={{item.id}}" class="chuang" wx:for="{{idea_list}}" wx:key="id">
      <view class="avatar-line">
        <view class="left">
          <image lazy-load src="{{item.avatar}}" class="avatar"></image>
          <view class="nickname">{{item.nickname}}</view>
        </view>
        <view catchtap="ideaVote" data-index="{{index}}" class="agree">
          <image src="/icons/zan-active.png" wx:if="{{item.if_vote}}"></image>
          <image src="/icons/zan.png" wx:else></image>
          <text>{{item.vote}}</text>
        </view>
      </view>
      <view class="title one-line-ellipsis">{{item.title}}</view>
      <view class="tag-line" wx:if="{{item.tags_name.length > 0}}">
        <view class="tag" wx:for="{{item.tags_name}}" wx:for-item="tag">{{tag}}</view>
        <view class="tag vh" wx:for="{{item.flex_pad}}"></view>
      </view>
    </navigator>
  </view>

  <view class="nomore" wx:if="{{nomore}}">
    已经没有更多了哦
  </view>

  <view class="nodata" wx:if="{{nodata}}">
    暂无数据
  </view>
</view>