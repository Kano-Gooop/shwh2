<view class="page">
  <view class="chuang-rank-list">
    <view class="chuang" wx:for="{{idea_list}}" wx:key="id">
      <view class="tou">
        <image lazy-load src="/icons/{{index + 1}}st.png" wx:if="{{index < 3}}"></image>
        <text wx:else>0{{index + 1}}</text>
      </view>
      <image lazy-load src="/images/t-header.png" class="cover"></image>
      <text class="title one-line-ellipsis">{{item.title}}</text>
      <view class="agree">
        <image lazy-load src="/icons/zan.png"></image>
        <text>{{item.vote}}</text>
      </view>
    </view>
  </view>

  <view class="nomore" wx:if="{{nomore}}">
    已经没有更多了哦
  </view>

  <view class="nodata" wx:if="{{nodata}}">
    暂无数据
  </view>
</view>