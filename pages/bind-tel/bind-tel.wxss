.page {
}

.main {
  padding: 62rpx 95rpx 0;
}

.face-box {
  text-align: center;
}

.face-box .face {
  width: 167rpx;
  height: 117rpx;
  vertical-align: bottom;
}

.face-box .text {
  margin-top: 13rpx;
  color: #333;
  font-size: 24rpx;
}

.form {
  margin-top: 139rpx;
}

.form .form-item:first-child {
  margin-top: 0;
}

.form .form-item {
  margin-top: 58rpx;
  padding-bottom: 22rpx;
  padding-left: 14rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.07);
  display: flex;
  align-items: center;
}

.form .form-item .tol {
  flex-shrink: 0;
}

.form .form-item .tol.t1 {
  width: 28rpx;
  height: 38rpx;
}

.form .form-item .tol.t2 {
  width: 34rpx;
  height: 34rpx;
}

.form .form-item input {
  font-size: 34rpx;
  color: #333;
  flex-grow: 1;
  margin-left: 28rpx;
}

.form .form-item .code-btn {
  flex-shrink: 0;
  padding: 11rpx 17rpx;
  border-radius: 10rpx;
  line-height: 1;
  font-size: 28rpx;
  background: #ffb925;
  color: #fff;
  font-weight: normal;
}

.form .form-item .code-btn[disabled] {
  background: #bbb;
  color: #fff;
}

.sub-btn {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 100rpx;
  text-align: center;
  background-image: linear-gradient(45deg, #ffca36 0%, #ffb925 100%);
  border-radius: 8rpx;
  color: #fff;
  font-size: 32rpx;
}