.page {
    background: #f5f5f5;
}

.designer-box {
}

.designer {
    display: flex;
    padding: 20rpx 30rpx;
    background: #fff;
    margin-bottom: 17rpx;
}

.designer:last-child {
    margin-bottom: 0;
}

.designer .avatar {
    width:150rpx;
    height:150rpx;
    border-radius:50%;
    overflow:hidden;
}

.designer .info {
    margin-left:26rpx;
    line-height:1.5;
}

.designer .info .nickname {
    font-size:28rpx;
}

.designer .info .nickname .iconfont {
    font-size:34rpx;
    font-weight:bold;
}

.designer .info .nickname .iconnan {
    color: #46bbed;
    font-size: 32rpx;
}

.designer .info .nickname .iconnv {
    color: #ff768d;
}

.designer .info .follow-box {
    display:flex;
    align-items:center;
    font-size:28rpx;
    margin-top:18rpx;
}

.designer .info .follow-box .follow {

}

.designer .info .follow-box button {
    display:inline-flex;
    justify-content:center;
    align-items:center;
    font-size:24rpx;
    font-weight:bold;
    line-height:1.8;
    padding:0 25rpx;
    background:#fff;
    color:#d64c69;
    flex-shrink:0;
    border-radius:30rpx;
    border:2rpx solid #d64c69;
    margin-left:24rpx;
}

.designer .info .follow-box button.focus {
    border-color: #ddd;
    background: #eee;
    color: #666;
}