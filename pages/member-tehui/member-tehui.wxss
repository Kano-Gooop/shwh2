.page {
}

.banner {
  width: 100%;
  height: 400rpx;
}

.banner .si {
  width: 100%;
}

.banner .si image {
  width: 100%;
  height: 100%;
}

.tj-box {
  margin-top: 40rpx;
  padding: 0 24rpx 40rpx;
  border-bottom: 10rpx solid #efefef;
}

.tj-box .titles {
  text-align: center;
}

.tj-box .titles .title {
  font-size: 40rpx;
  color: #101010;
}

.tj-box .titles .sub-title {
  margin-top: 15rpx;
  font-size: 28rpx;
  color: #999;
}

.tj-box .tj-list {
  margin-top: 26rpx;
  border-top: 2rpx solid #f5f5f5;
  padding-top: 22rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.tj-box .tj-list .tj {
  margin-top: 30rpx;
  width: 218rpx;
}

.tj-box .tj-list .tj:nth-child(-n + 3) {
  margin-top: 0;
}

.tj .cover {
  width: 100%;
  height: 218rpx;
  border-radius: 8rpx;
}

.tj .info {
  padding-top: 16rpx;
}

.tj .info .title {
  font-size: 28rpx;
  color: #333;
}

.tj .info .price-box {
  margin-top: 30rpx;
}

.tj .info .price-box .member::before {
  content: '￥';
}

.tj .info .price-box .member {
  font-size: 28rpx;
  color: #F43530;
}

.tj .info .price-box .origin::before {
  content: '￥';
}

.tj .info .price-box .origin {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 5rpx;
}