.page {
  position: relative;
  background: #f9f9f9;
}

.navigation-box {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 1;
}

.navigation {
  display: flex;
  align-items: center;
  position: relative;
  justify-content: center;
}

.navigation .title {
  text-align: center;
  font-size: 34rpx;
}

.navigation .iconfont {
  position: absolute;
  left: 37rpx;
  font-size: 50rpx;
  font-weight: bold;
  top: 17rpx;
  color: #333;
}

.header {
  background: #fff;
  height: 371rpx;
  box-sizing: border-box;
  position: relative;
  border-radius: 10rpx;
}

.header .avatar-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 371rpx;
}

.header .inner {
  padding: 30rpx 24rpx 0;
  position: relative;
  z-index: 2;
}

.inner .header-box {
  display: flex;
  position: relative;
  align-items: center;
}

.inner .header-box .tou {
  flex-shrink: 0;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.inner .header-box .you {
  flex-grow: 1;
  margin-left: 23rpx;
  line-height: 1;
}

.inner .header-box .you .nickname {
  font-size: 32rpx;
  color: #fff;
  opacity: 0.9;
}

.inner .header-box .you .quan {
  margin-top: 19rpx;
  display: flex;
  align-items: center;
}

.inner .header-box .you .quan .vip {
  width: 45rpx;
  height: 30rpx;
}

.inner .header-box .you .quan .vip-btn {
  margin-left: 23rpx;
  height: 35rpx;
  line-height: 35rpx;
  border-radius: 4rpx;
  background-color: #fccc4b;
  width: 192rpx;
  padding: 0;
  font-size: 26rpx;
  color: #fffefe;
  letter-spacing: 1rpx;
  text-align: center;
}

.inner .header-box .mess-box {
  position: absolute;
  padding: 10rpx;
  right: 0;
  top: 30rpx;
}

.inner .header-box .mess-box image {
  width: 32rpx;
  height: 38rpx;
}

.inner .sign-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
}

.inner .sign-box .sign-progress {
  display: flex;
  width: 520rpx;
  justify-content: space-between;
}

.inner .sign-box .sign-progress .sign {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  text-align: center;
  position: relative;
}

.inner .sign-box .sign-progress .sign::after {
  content: '';
  position: absolute;
  width: 44rpx;
  height: 6rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  left: calc(100% - 2rpx);
  display: block;
  background: #fff;
}

.inner .sign-box .sign-progress .sign.active::after {
  background: #fec448;
}

.inner .sign-box .sign-progress .sign.active.last-active::after {
  background: #fff;
}

.inner .sign-box .sign-progress .sign:last-child::after {
  display: none;
}

.inner .sign-box .sign-progress .sign .number {
  color: #333;
  position: absolute;
  z-index: 1;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 50%;
}

.inner .sign-box .sign-progress .sign.active .number {
  background: #fec448;
}

.inner .sign-box .sign-progress .sign .today {
  display: none;
}

.inner .sign-box .sign-progress .sign.today-active .today {
  display: block;
  position: absolute;
  left: 50%;
  margin: auto;
  color: #fff;
  bottom: 50rpx;
  transform: translateX(-50%);
}

.inner .sign-box .sign-progress .sign.active {
  background: #fec448;
}

.inner .sign-box .sign-progress .sign.today-active {
}

.inner .sign-box .sign-btn {
  width: 99rpx;
  height: 47rpx;
  background-color: #fec448;
  border-radius: 4rpx;
  font-size: 26rpx;
  line-height: 47rpx;
  padding: 0;
  color: #fff;
  letter-spacing: 1rpx;
  margin: 0;
}

.count-box {
  margin: 0 24rpx;
  height: 173rpx;
  background-color: #fff;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  margin-top: -50rpx;
  position: relative;
}

.count-box .shu {
  width: 3rpx;
  height: 80rpx;
  background-color: #f5f5f5;
}

.count-box .count-item {
  width: 0;
  flex-grow: 1;
  line-height: 1;
  text-align: center;
}

.count-box .count-item .number {
  font-size: 48rpx;
  color: #000;
  letter-spacing: 2rpx;
}

.count-box .count-item .desc {
  margin-top: 31rpx;
  font-size: 28rpx;
  color: #999;
  letter-spacing: 1rpx;
}

.menu {
  background: #fff;
  margin-top: 25rpx;
  padding: 0 15rpx;
  color: #333;
}

.menu .menu-item {
  border-bottom: 1rpx solid #ddd;
  height: 103rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  position: relative;
  background: #fff;
  color: #333;
}

.menu .menu-item:last-child {
  border-bottom: none;
}

.menu .menu-item.has {
  border-bottom: 1rpx solid #ddd;
}

.menu .menu-item.navigator-hover, .menu .menu-item:active {
  opacity: 0.8;
  background: transparent;
}

.menu .icon-img {
  font-size: 40rpx;
  width: 40rpx;
  height: 40rpx;
}

.menu .iconfont {
  display: flex;
  align-items: center;
}

.menu .iconfont.left {
  color: #888;
  font-size: 44rpx;
}

.menu .icon-img {
  width: 45rpx;
  height: 45rpx;
}

.menu .iconfont.iconyou {
  font-size: 30rpx;
  position: absolute;
  right: 30rpx;
  top: 0;
  bottom: 0;
  color: #c1c0c9;
}

.menu .iconshenqing {
  font-weight: bold;
}

.menu .menu-item text {
  margin-left: 22rpx;
  font-size: 34rpx;
  line-height: 49rpx;
  color: #303030;
}

