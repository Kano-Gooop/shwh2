<!--      <image src="/icons/you3.png" class="you"></image>-->
<!--    </navigator>-->
    <button open-type="contact" show-message-card="true" class="menu-item" url="/pages/my-notes/my-notes">
      <view class="left-box">
        <view class="icon-box">
          <image src="/icons/menu10.png" class="icon-menu10"></image>
        </view>
      </view>
      <view class="menu-text">在线客服</view>
      <image src="/icons/you3.png" class="you"></image>
    </button>
  </view>

