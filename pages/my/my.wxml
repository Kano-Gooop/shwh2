<view class="full-loading" wx:if="{{full_loading}}">
  <view class="image"></view>
</view>

<view class="page">
  <view class="header">
    <image src="/images/my-bg.jpg" class="avatar-bg"></image>
    <view class="inner">
      <view class="header-box">
        <image src="{{user.avatar}}" class="tou" wx:if="{{user.user_auth == 1}}"></image>
        <image src="/images/default.png" class="tou" wx:else></image>
        <view class="you">
          <view class="nickname" wx:if="{{user.user_auth == 1}}">{{user.nickname}}</view>
          <view class="nickname" wx:else><button bindgetuserinfo="auth" open-type="getUserInfo" data-type="{{2}}">授权登陆</button></view>
          <view class="role-text" wx:if="{{user.role_check == 2}}">我是{{user.role_text}}</view>
          <view class="quan">
            <image wx:if="{{user.vip != 1}}" src="/icons/zuan.png" class="vip"></image>
            <image wx:else src="/icons/zuan-active.png" class="vip"></image>

            <navigator url="/pages/recharge/recharge" wx:if="{{user.vip != 1}}" class="vip-btn">我要成为会员</navigator>
          </view>
        </view>
<!--        <view class="mess-box">-->
<!--          <image src="/icons/bell.png"></image>-->
<!--        </view>-->
      </view>
      <view class="sign-box">
        <view class="sign-progress">
          <view class="sign active">
            <view class="number">1</view>
            <view class="today">+1</view>
          </view>
          <view class="sign active">
            <view class="number">2</view>
            <view class="today">+1</view>
          </view>
          <view class="sign active">
            <view class="number">3</view>
            <view class="today">+1</view>
          </view>
          <view class="sign active last-active today-active">
            <view class="number">4</view>
<!--            <view class="today">+5</view>-->
          </view>
          <view class="sign">
            <view class="number">5</view>
            <view class="today">+1</view>
          </view>
          <view class="sign">
            <view class="number">6</view>
            <view class="today">+1</view>
          </view>
          <view class="sign">
            <view class="number">7</view>
            <view class="today">+1</view>
          </view>
        </view>
        <button class="sign-btn">签到</button>
      </view>
    </view>
  </view>

  <view class="tran-bg">
    <view class="count-box">
      <view class="count-item">
        <view class="number">25</view>
        <view class="desc">我的关注</view>
      </view>
      <view class="shu"></view>
      <navigator url="/pages/my-notes/my-notes" class="count-item">
        <view class="number">120</view>
        <view class="desc">我的笔记</view>
      </navigator>
      <view class="shu"></view>
      <view class="count-item">
        <view class="number">996</view>
        <view class="desc">获得积分</view>
      </view>
    </view>

    <view class="order-box">
      <view class="title">我的订单</view>
      <navigator url="/pages/my-orders/my-orders" class="all">
        <view class="zi">全部</view>
        <image src="/icons/you3.png"></image>
      </navigator>
      <view class="o-menus">
        <navigator url="/pages/my-orders/my-orders?status=0" class="o-menu">
          <image src="/icons/os1.png" class="icon"></image>
          <view class="explain">待付款</view>
        </navigator>
        <navigator url="/pages/my-orders/my-orders?status=1" class="o-menu">
          <image src="/icons/os2.png" class="icon"></image>
          <view class="explain">待发货</view>
        </navigator>
        <navigator url="/pages/my-orders/my-orders?status=2" class="o-menu">
          <image src="/icons/os3.png" class="icon"></image>
          <view class="explain">待收货</view>
        </navigator>
        <navigator url="/pages/my-orders/my-orders?status=3" class="o-menu">
          <image src="/icons/os4.png" class="icon"></image>
          <view class="explain">已完成</view>
        </navigator>
        <navigator url="/pages/refund-list/refund-list" class="o-menu">
          <image src="/icons/os5.png" class="icon"></image>
          <view class="explain">售后</view>
        </navigator>
      </view>
    </view>
  </view>

  <view class="menu">
    <navigator class="menu-item" url="/pages/my-chuang/my-chuang">
      <view class="left-box">
        <view class="icon-box">
          <image src="/icons/menu1.png" class="icon-menu1"></image>
        </view>
      </view>
      <view class="menu-text">我的创意</view>
      <image src="/icons/you3.png" class="you"></image>
    </navigator>
    <navigator class="menu-item" url="/pages/my-req/my-req" wx:if="{{user.role == 1}}">
      <view class="left-box">
        <view class="icon-box">
          <image src="/icons/menu2.png" class="icon-menu2"></image>
        </view>
      </view>
      <view class="menu-text">我的活动</view>
      <image src="/icons/you3.png" class="you"></image>
    </navigator>
    <navigator class="menu-item" url="/pages/my-works/my-works" wx:if="{{user.role == 2}}">
      <view class="left-box">
        <view class="icon-box">
          <image src="/icons/menu3.png" class="icon-menu3"></image>
        </view>
      </view>
      <view class="menu-text">我的投稿</view>
      <image src="/icons/you3.png" class="you"></image>
    </navigator>
    <navigator class="menu-item" url="/pages/my-bidding/my-bidding" wx:if="{{user.role == 3}}">
      <view class="left-box">
        <view class="icon-box">
          <image src="/icons/menu4.png" class="icon-menu4"></image>
        </view>
      </view>
      <view class="menu-text">我的接单</view>
      <image src="/icons/you3.png" class="you"></image>
    </navigator>
    <navigator class="menu-item" url="/pages/my-chou-orders/my-chou-orders">
      <view class="left-box">
        <view class="icon-box">
          <image src="/icons/menu5.png" class="icon-menu5"></image>
        </view>
      </view>
      <view class="menu-text">我的众筹</view>
      <image src="/icons/you3.png" class="you"></image>
    </navigator>

    <button bindgetuserinfo="auth" open-type="getUserInfo" data-type="{{1}}" wx:if="{{user.role_check != 2 && user.user_auth == 0}}" class="menu-item">
      <view class="left-box">
        <view class="icon-box">
          <image src="/icons/menu6.png" class="icon-menu6"></image>
        </view>
      </view>
      <view class="menu-text">申请角色</view>
      <image src="/icons/you3.png" class="you"></image>
    </button>
    <view bindtap="before_apply" wx:if="{{user.role_check != 2 && user.user_auth == 1}}" class="menu-item">
      <view class="left-box">
        <view class="icon-box">
          <image src="/icons/menu6.png" class="icon-menu6"></image>
        </view>
      </view>
      <view class="menu-text">申请角色</view>
      <image src="/icons/you3.png" class="you"></image>
    </view>

    <navigator class="menu-item" url="/pages/my-edit/my-edit">
      <view class="left-box">
        <view class="icon-box">
          <image src="/icons/menu7.png" class="icon-menu7"></image>
        </view>
      </view>
      <view class="menu-text">个人资料</view>
      <image src="/icons/you3.png" class="you"></image>
    </navigator>
    <navigator class="menu-item" url="/pages/my-address/my-address">
      <view class="left-box">
        <view class="icon-box">
          <image src="/icons/menu8.png" class="icon-menu8"></image>
        </view>
      </view>
      <view class="menu-text">收货地址</view>
      <image src="/icons/you3.png" class="you"></image>
    </navigator>
