.page {
  padding-top: 110rpx;
}

.search-box {
  background: #fff;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  padding: 20rpx 0;
  z-index: 1;
}

.search {
  background: #f5f5f5;
  border-radius: 40rpx;
  height: 70rpx;
  margin: 0 20rpx;
  display: flex;
  align-items: center;
  padding-left: 15rpx;
}

.search .iconfont {
  font-size: 40rpx;
  position: relative;
  top: -4rpx;
  margin-left: 5rpx;
  color: #9c9c9c;
  flex-shrink: 1;
}

.search input {
  margin-left: 10rpx;
  font-size: 26rpx;
  flex-grow: 1;
}

.goods-box {
  padding: 0 24rpx;
}

.goods-box .goods-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.goods-list .goods2 {
  width: 340rpx;
  box-sizing: border-box;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  overflow: hidden;
  margin-top: 24rpx;
}

.goods-list .goods2:nth-child(-n + 2) {
  margin-top: 0;
}

.goods2 .cover {
  width: 100%;
  height: 336rpx;
}

.goods2 .info {
  padding: 19rpx 14rpx 24rpx;
}

.goods2 .info .title {
  font-size: 28rpx;
  line-height: 1.4;
}

.goods2 .info .shop {
  margin-top: 15rpx;
  color: #666;
  font-size: 24rpx;
}

.goods2 .info .price::before {
  content: 'ï¿¥';
  margin-right: 5rpx;
}

.goods2 .info .price {
  margin-top: 30rpx;
  font-size: 32rpx;
  color: #F43530;
}