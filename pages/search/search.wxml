<view class="page">
  <!-- 搜索框 -->
  <view class="search-box">
    <view class="search">
      <icon bindtap="search_notes" class="iconfont iconsearch"/>
      <input bindinput="bind_input" bindconfirm="search_notes" data-name="search" placeholder="搜索需求" maxlength="8"/>
    </view>
  </view>

  <!-- 商品列表 -->
  <view class="goods-box">
    <view class="goods-list">
      <view class="goods2" wx:for="{{[0, 1, 2, 3, 4]}}">
        <image src="/images/t-bao-goods.jpg" class="cover" mode="aspectFill" lazy-load></image>
        <view class="info">
          <view class="title two-line-ellipsis">DIY免费刻字笔记本定制可DIY免费刻字笔记本定制可DIY免费刻字笔记本定制可</view>
          <view class="shop one-line-ellipsis">叁拾叁物语笔记本定制</view>
          <view class="price">14.8</view>
        </view>
      </view>
    </view>
    <view class="nomore" wx:if="{{nomore}}">
      已经没有更多了哦
    </view>
    <view class="nodata" wx:if="{{nodata}}">
      暂无商品
    </view>
  </view>
</view>