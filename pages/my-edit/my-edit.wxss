.page {
  padding-top: 20rpx;
  padding-bottom: 50rpx;
  box-sizing: border-box;
  min-height: 100vh;
}

.header-box {
  line-height: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 46rpx 0 59rpx;
}

.header-box image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.header-box .edit-h {
  margin-top: 14rpx;
  font-size: 24rpx;
  color: #999;
}

.input-item {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 24rpx 60rpx;
  padding-bottom: 40rpx;
}

.input-item.sign {
  display: block;
  border-bottom: 0;
  margin-bottom: 0;
}

.input-item.cover {
  display: block;
}

.input-item.cover .you .cover-box {
  width: 100%;
  position: relative;
}

.input-item.cover .you .cover-box .icon {
  width: 38rpx;
  height: 40rpx;
  position: absolute;
  right: 25rpx;
  top: 25rpx;
  background: #fff;
  border-radius: 10rpx;
  opacity: 0.5;
  padding: 15rpx;
}

.input-item.cover .you image {
  width: 100%;
  height: 351rpx;
  margin-top: 30rpx;
  border-radius: 4rpx;
}

.input-item:last-child {
  margin-bottom: 0;
  border-bottom: 0;
  padding-bottom: 0;
}

.input-item.avatar-item {
  display: flex;
}

.input-item .label {
  font-size: 34rpx;
  color: #333;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.input-item .you {
  display: flex;
  align-items: center;
}

.input-item.sign .you {
  display: block;
}

.input-item.sign .sign-box {
  margin-top: 60rpx;
  padding: 24rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  min-height: 180rpx;
  justify-content: space-between;
}

.input-item.sign .sign-box .content {
  font-size: 34rpx;
  color: #666;
  line-height: 1.4;
  white-space: pre-line;
}

.input-item.sign .sign-box .icon {
  align-self: flex-end;
  width: 38rpx;
  height: 40rpx;
  margin-top: 15rpx;
}

.input-item .you .auth-btn {
  margin: 0;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  line-height: 1;
  background: #ffcc06;
  height: auto;
  border-radius: 4rpx;
  color: #333;
}

.input-item .you .value {
  margin-right: 22rpx;
  color: #666;
  font-size: 34rpx;
}

.input-item .you picker {
  width: 500rpx;
}

.input-item .you picker .value {
  text-align: right;
}

.input-item .you .arrow-you {
  width: 14rpx;
  height: 24rpx;
}

/* modal start */

.modal {
  padding: 10rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  height: 100vh;
  box-sizing: border-box;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.modal .content {
  background: #fff;
  box-sizing: border-box;
  width: 80%;
  padding: 50rpx 30rpx;
  border-radius: 15rpx;
}

.modal .content .title {
  text-align: center;
  font-size: 30rpx;
}

.modal .content input {
  border-bottom: 1px solid #ddd;
  margin-top: 35rpx;
  font-size: 26rpx;
  text-align: center;
}

.modal .content button {
  border-radius: 10rpx;
  color: #fff;
  margin-top: 40rpx;
  background: #ffb93e;
  line-height: 2;
  width: 160rpx;
  margin-right: 0;
  font-size: 26rpx;
}

/* modal end */
