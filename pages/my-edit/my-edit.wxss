.page {
    padding-top: 20rpx;
    padding-bottom: 30rpx;
}

.upload-box {
    margin-right: 22rpx;
}

.upload-box .upload {
    display:flex;
    justify-content:center;
    align-items:center;
    border:1px dashed #ddd;
    width:220rpx;
    height:220rpx;
}

.upload-box .img-box {
    display: inline-block;
    position: relative;
}

.upload-box .img {
    width: 101rpx;
    height: 101rpx;
    border-radius: 10rpx;
    vertical-align: bottom;
}

.input-item {
    margin-left: 37rpx;
    padding: 22rpx 60rpx 22rpx 0;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.input-item.avatar-item {
    display: flex;
}

.input-item .label {
    font-size:32rpx;
    color:#303030;
    flex-shrink:0;
    margin-right:20rpx;
}

.input-item .you {
    display:flex;
    align-items:center;
}

.input-item .you .value {
    margin-right: 22rpx;
    color: #666;
    font-size: 28rpx;
}

.input-item .you picker {
    width: 500rpx;
}
.input-item .you picker .value {
    text-align: right;
}

.input-item .you.avatar-you {
    display: flex;
    align-items: center;
}

.input-item .you .arrow-you {
    width: 15rpx;
    height: 28rpx;
}

.submit {
    display: block;
    margin: 91rpx 30rpx 0;
    height: 81rpx;
    background-color: #ffb93e;
    border-radius: 10rpx;
    color: #fff;
    font-size: 34rpx;
}

/* modal start */
.modal {
    padding: 10rpx;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10;
    height: 100vh;
    box-sizing: border-box;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    overflow: hidden;
}

.modal .content {
    background: #fff;
    box-sizing: border-box;
    width: 80%;
    padding: 50rpx 30rpx;
    border-radius: 15rpx;
}

.modal .content .title {
    text-align: center;
    font-size: 30rpx;
}

.modal .content input {
    border-bottom: 1px solid #ddd;
    margin-top: 35rpx;
    font-size: 26rpx;
    text-align: center;
}

.modal .content button {
    border-radius: 10rpx;
    color: #fff;
    margin-top: 40rpx;
    background: #ffb93e;
    line-height: 2;
    width: 160rpx;
    margin-right: 0;
    font-size: 26rpx;
}
/* modal end */