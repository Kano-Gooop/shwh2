@import '/wxParse/wxParse.wxss';

view {
  overflow: visible;
}

.page {
  line-height: 1;
}

.header {
}

.top-swiper {
  height: 375rpx;
  background: #fff;
  width: 100%;
}

.top-swiper swiper-item {
  display: flex;
  align-items: center;
}

.top-swiper image {
  width: 100%;
  height: 100%;
}

.header .title {
  padding: 38rpx 24rpx;
  font-size: 32rpx;
  color: #333;
}

.pull-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.pull-title .title {
  font-size: 32rpx;
  color: #333;
}

.pull-title .down {
  width: 25rpx;
  height: 14rpx;
  transition: 0.3s all;
}

.pull-title .down.off {
  transform: rotate(-90deg);
}

.info {
  padding: 39rpx 24rpx;
  border-top: 10rpx solid rgba(0, 0, 0, 0.03);
}

.info .list {
  margin-top: 39rpx;
}

.info .list .list-item {
  margin-top: 42rpx;
  display: flex;
  font-size: 28rpx;
}

.info .list .list-item:first-child {
  margin-top: 0;
}

.info .list .list-item .label {
  width: 110rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: justify;
  overflow: hidden;
  color: #999;
  flex-shrink: 0;
}

.info .list .list-item .label::after {
  content: "";
  display: inline-block;
  width: 100%;
}

.info .list .list-item .value {
  flex-grow: 1;
  margin-left: 80rpx;
  color: #333;
}

.intro {
  border-top: 10rpx solid rgba(0, 0, 0, 0.03);
  padding: 39rpx 24rpx;
}

.intro .content-wrapper {
  margin-top: 40rpx;
}

.sign-up {
  border-top: 10rpx solid rgba(0, 0, 0, 0.03);
  padding: 79rpx 24rpx 100rpx;
}

.sign-up .paper-box {
  box-shadow: 0 10rpx 24rpx 0 rgba(159, 159, 159, 0.75);
  border-radius: 10rpx;
  padding: 30rpx 46rpx 85rpx;
}

.sign-up .sign-img {
  width: 401rpx;
  height: 94rpx;
  display: block;
  margin: auto;
}

.sign-up .form {
  margin-top: 70rpx;
}

.sign-up .form .line {
  border-bottom: 2rpx solid rgba(102, 102, 102, 0.03);
  padding-bottom: 18rpx;
  display: flex;
  align-items: center;
  margin-top: 38rpx;
}

.sign-up .form .line:first-child {
  margin-top: 0;
}

.sign-up .form .line .label {
  flex-shrink: 0;
  width: 83rpx;
  height: 1.4rem;
  line-height: 1.4rem;
  text-align: justify;
  overflow: hidden;
  font-size: 28rpx;
  color: #666;
}

.sign-up .form .line .label.req::before {
  content: '*';
  color: red;
  margin-right: 6rpx;
  font-weight: bold;
  position: relative;
  top: 6rpx;
}

.sign-up .form .line .label::after {
  content: "";
  display: inline-block;
  width: 100%;
}

.sign-up .form .line .you-box {
  flex-grow: 1;
  margin-left: 80rpx;
}

.sign-up .form .line .you-box input {
  color: #333;
}

.sign-up .form .line .you-box .radio-group {
  display: flex;
}

.sign-up .form .line .you-box .radio-group .sex {
  display: flex;
  align-items: center;
  margin-right: 59rpx;
}

.sign-up .form .line .you-box .radio-group .sex:last-child {
  margin-right: 0;
}

.sign-up .form .line .you-box .radio-group radio {
}

.sign-up .form .line .you-box .radio-group .text {
  margin-left: 10rpx;
  font-size: 28rpx;
}

.sign-up .form .line .you-box.code {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sign-up .form .line .you-box.code .code-btn {
  padding: 0;
  border: 0;
  box-sizing: border-box;
  width: 183rpx;
  height: 60rpx;
  display: flex;
  line-height: 60rpx;
  border-radius: 30rpx;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #ededed;
  background: #f3a202;
}

.sign-up .form .sub-btn {
  margin: 66px auto 0;
  width: 345rpx;
  height: 80rpx;
  background-color: #e54829;
  box-shadow: 0 10rpx 24rpx 0 rgba(255, 115, 88, 0.65);
  border-radius: 40rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  border: 0;
  font-size: 30rpx;
  color: #fafafa;
}
