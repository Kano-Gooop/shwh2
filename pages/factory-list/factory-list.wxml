<view class="full-loading" wx:if="{{full_loading}}">
  <view class="image"></view>
</view>

<view class="page">
  <view class="block">
    <view class="list">
      <navigator url="/pages/factory-detail/factory-detail?uid={{item.uid}}" class="item" wx:for="{{factoryList}}" wx:key="id">
        <image src="{{item.cover}}" mode="widthFix" lazy-load="{{true}}"></image>
        <view class="info">
          <view class="up">
            <!-- 因为工厂是主体，所以org在左边了 -->
            <view class="name">{{item.org}}</view>
            <view class="org">{{item.name}}</view>
          </view>
          <view class="desc">{{item.desc}}</view>
        </view>
      </navigator>
    </view>
  </view>

  <view class="nomore" wx:if="{{nomore}}">
    已经没有更多了哦
  </view>

  <view class="nodata" wx:if="{{nodata}}">
    暂无内容
  </view>
</view>