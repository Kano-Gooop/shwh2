.page {
  padding: 24rpx 24rpx 50rpx;
  background: #fafafa;
}

.page-top {
  text-align: center;
  line-height: 64rpx;
}

.tou-swiper {
  height: 320rpx;
  /* margin-top: -18rpx; */
}

.tou-swiper .wx-swiper-dots.wx-swiper-dots-horizontal {
  position: absolute;
  bottom: -10rpx;
}

.page-top .feng-bian {
  position: relative;
  margin-left: -14rpx;
  margin-right: -14rpx;
  margin-top: -14rpx;
  z-index: 1;
  display: none;
}

.page-top .feng-bian image {
  width: 100%;
  height: 64rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.page-top .feng-bian text {
  position: relative;
  z-index: 1;
  font-size: 28rpx;
  color: #2d2e31;
}

.leng-title {
  line-height: 1;
  display: flex;
  align-items: center;
  position: relative;
  justify-content: center;
  font-size: 36rpx;
}

.leng-title text {
}

.leng-title .leng {
  width: 12rpx;
  height: 12rpx;
  margin: 0 15rpx;
  transform: rotate(45deg);
  background: #000;
}

.leng-title .more-box {
  padding: 10rpx 20rpx 5rpx;
  position: absolute;
  bottom: 0;
  right: 0;
}

.leng-title .more {
  width: 36rpx;
  height: 9rpx;
  right: 0;
  vertical-align: bottom;
}

.activity-box {
  margin-top: 47rpx;
}

.activity-list {
  margin-top: 24rpx;
}

.activity-list .activity {
  padding-bottom: 18rpx;
  border-bottom: 2rpx solid #131b2f12;
  margin-bottom: 44rpx;
}

.activity-list .activity .cover {
  width: 100%;
  height: 300rpx;
  vertical-align: bottom;
}

.activity-list .activity .title {
  font-size: 32rpx;
  color: #333;
  opacity: 0.8;
  line-height: 48rpx;
  margin-top: 10rpx;
}

.activity-list .activity .info {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  line-height: 1;
  color: #999;
}

.activity-list .activity .info .people {
}

.activity-list .activity .info .people .icon {
  width: 20rpx;
  height: 23rpx;
  margin-right: 9rpx;
  vertical-align: bottom;
}

.activity-list .activity .info .people text {
}

.activity-list .activity .info .date {
}

.activity-list .activity .info .date .icon {
  width: 23rpx;
  height: 23rpx;
  margin-right: 9rpx;
  vertical-align: bottom;
}

.activity-list .activity .info .date text {
}

.activity-list .activity:last-child {
  margin-bottom: 0;
}

.rank-box {
  margin-top: 47rpx;
}

.chou-box {
  margin-top: 48rpx;
}

.chou-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.chou-list .chou {
  width: 340rpx;
  margin-top: 24rpx;
  background: #fff;
  border-radius: 4rpx;
  box-shadow: 0 1rpx 27rpx 0 rgba(237, 237, 237, 0.75);
  overflow: hidden;
}

.chou-list .chou .cover {
  width: 100%;
  height: 180rpx;
}

.chou-list .chou:nth-child(2n) {
  margin-right: 0;
}

.chou-list .chou .info {
  padding: 20rpx;
}

.chou-list .chou .info .title {
  color: #333;
  opacity: 0.8;
  font-size: 26rpx;
}

.chou-list .chou .info .bottom {
  margin-top: 24rpx;
  font-size: 20rpx;
  color: #666;
  display: flex;
  justify-content: space-between;
}

