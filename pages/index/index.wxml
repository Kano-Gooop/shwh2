<view class="page">
  <view class="top">
    <!-- 顶部搜索框和消息 -->
    <view class="search-box">
      <view class="search">
        <image src="/icons/zoom.png"></image>
        <view class="placeholder">搜索</view>
      </view>
    </view>
  </view>

  <!-- 轮播 -->
  <view class="swiper-box">
    <swiper indicator-dots="{{true}}"
            autoplay="{{true}}"
            circular="{{true}}"
            class="banner">
      <swiper-item wx:for="{{[0, 1, 2, 3, 4]}}" class="si">
        <image bindtap="jump" data-page="gg-detail?id={{item.url}}" data-url="{{item.url}}"
               src="/images/t-banner.jpg"></image>
      </swiper-item>
    </swiper>
  </view>

  <!-- 金刚区 -->
  <view class="kingkong">
    <view class="kitem">
      <image src="/icons/kk2.png"></image>
      <view class="title">创意众筹</view>
    </view>
    <view class="kitem">
      <image src="/icons/kk3.png"></image>
      <view class="title">会员特惠</view>
    </view>
    <view class="kitem">
      <image src="/icons/kk6.png"></image>
      <view class="title">IP授权</view>
    </view>
    <view class="kitem">
      <image src="/icons/kk9.png"></image>
      <view class="title">即时采购</view>
    </view>
    <view class="kitem">
      <image src="/icons/kk10.png"></image>
      <view class="title">文创大赛</view>
    </view>
  </view>

  <!-- 每日签到 -->
  <view class="sign-box">
    <image src="/images/qiandao.jpg" class="sign"></image>
  </view>

  <!-- 视频精选 -->
  <view class="video-box">
    <view class="title-line">
      <view class="title">视频精选</view>
      <view class="more">
        <view class="text">更多</view>
        <image src="/icons/right-arrow.png" class="you"></image>
      </view>
    </view>
    <view class="video big-video">
      <view class="cover-box">
        <image src="/images/t-video-cover.jpg" class="poster"></image>
        <view class="mask">
          <image src="/icons/right-tri.png" class="tri"></image>
          <view class="time-text">00:30</view>
        </view>
      </view>
      <view class="info">
        <view class="title">中国国家博物馆溪山雨意快客杯功夫茶具套装</view>
        <view class="xia">
          <view class="price">299.00</view>
        </view>
      </view>
    </view>
    <view class="video-list">
      <view class="video" wx:for="{{[0, 1]}}">
        <view class="cover-box">
          <image src="/images/t-video-cover.jpg" class="poster"></image>
          <view class="mask">
            <image src="/icons/right-tri.png" class="tri"></image>
            <view class="time-text">00:30</view>
          </view>
        </view>
        <view class="info">
          <view class="title two-line-ellipsis">中国国家博物馆溪山雨意快客杯功夫茶具套装</view>
          <view class="xia">
            <view class="price">299.00</view>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 定制专区 -->
  <view class="custom-zone">
    <view class="title">定制专区</view>
    <view class="tab">
      <view class="tab-item {{custom_active == 0 ? 'active' : ''}}">免费打样专区</view>
      <view class="tab-item {{custom_active == 1 ? 'active' : ''}}">小批量定制</view>
      <view class="tab-item {{custom_active == 2 ? 'active' : ''}}">免开模费</view>
    </view>
    <view class="custom-list">
      <view class="goods2" wx:for="{{[0, 1, 2, 3, 4]}}">
        <image src="/images/t-goods.jpg" class="cover"></image>
        <view class="info">
          <view class="title two-line-ellipsis">DIY免费刻字笔记本定制可DIY免费刻字笔记本定制可DIY免费刻字笔记本定制可</view>
          <view class="shop one-line-ellipsis">叁拾叁物语笔记本定制</view>
          <view class="price">14.8</view>
        </view>
      </view>
    </view>
  </view>

  <!-- 爆款推荐 -->
  <view class="baotui">
    <view class="title-line">
      <image src="/icons/fire.png" class="huo"></image>
      <view class="title">爆款推荐</view>
    </view>
    <view class="goods-list">
      <view class="goods2" wx:for="{{[0, 1, 2, 3, 4]}}">
        <image src="/images/t-bao-goods.jpg" class="cover"></image>
        <view class="info">
          <view class="title two-line-ellipsis">DIY免费刻字笔记本定制可DIY免费刻字笔记本定制可DIY免费刻字笔记本定制可</view>
          <view class="shop one-line-ellipsis">叁拾叁物语笔记本定制</view>
          <view class="price">14.8</view>
        </view>
      </view>
    </view>
    <view class="nomore" wx:if="{{nomore}}">
      已经没有更多了哦
    </view>
    <view class="nodata" wx:if="{{nodata}}">
      暂无数据
    </view>
  </view>
</view>