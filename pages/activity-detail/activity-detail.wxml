<view class="page">
  <!-- 头部 -->
  <view class="header">
    <video src="{{req.video_url}}" poster="{{req.cover}}" controls wx:if="{{req.use_video}}" class="banner"
           object-fit="cover"></video>
    <image src="{{req.cover}}" mode="aspectFill" class="banner" wx:else></image>
    <view class="title">{{req.title}}</view>
    <view class="zhong">
      <view bindtap="to_person" class="left">
        <image src="{{req.avatar}}" class="head-pic"></image>
        <view class="nickname">{{req.org}}</view>
      </view>
      <view class="right">
        <view class="people people1">
          <image src="/icons/ren.png"></image>
          <text>{{req.idea_num}}人</text>
        </view>
        <view class="people people2">
          <image src="/icons/ren2.png"></image>
          <text>{{req.works_num}}人</text>
        </view>
      </view>
    </view>
    <view class="times-box">
      <view class="times">
        <view class="time left">
          <view class="label">活动开始时间：</view>
          <view class="value">{{req.start_time}}</view>
        </view>
        <view class="time right">
          <view class="label">投稿截止时间：</view>
          <view class="value">{{req.deadline}}</view>
        </view>
      </view>
      <view class="times">
        <view class="time left">
          <view class="label">投票截止时间：</view>
          <view class="value">{{req.vote_time}}</view>
        </view>
        <view class="time right">
          <view class="label">接单截止时间：</view>
          <view class="value">{{req.end_time}}</view>
        </view>
      </view>
    </view>
  </view>

  <!-- 活动详情 -->
  <view class="ac-detail">
    <view class="title-line">
      <view class="title">活动详情</view>
      <navigator url="/pages/activity-rich/activity-rich?id={{id}}" class="more">
        <text>查看更多</text>
        <image src="/icons/you2.png"></image>
      </navigator>
    </view>
    <view class="desc">{{req.desc || ''}}</view>
  </view>

  <!-- 按钮组 -->
  <view class="btn-box" wx:if="{{status == 1}}">
    <button bindgetuserinfo="auth" open-type="getUserInfo" data-type="{{2}}" class="pub pub2" wx:if="{{user_auth == 0}}">
      <image src="/images/pub1.png"></image>
    </button>
    <navigator url="/pages/chuang-publish/chuang-publish?req_id={{id}}" class="pub pub2" wx:else>
      <image src="/images/pub1.png"></image>
    </navigator>

    <button bindgetuserinfo="auth" open-type="getUserInfo" data-type="{{1}}" class="pub pub1" wx:if="{{user_auth == 0}}">
      <image src="/images/pub2.png"></image>
    </button>
    <button bindtap="to_work_release" class="pub pub1" wx:else>
      <image src="/images/pub2.png"></image>
    </button>
  </view>
  <view bindtap="no_vote" class="btn-box disabled" wx:else>
    <button class="pub pub1">
      <image src="/images/pub2.png"></image>
    </button>
    <button class="pub pub1">
      <image src="/images/pub1.png"></image>
    </button>
  </view>

<!--  <button bindgetuserinfo="auth" open-type="getUserInfo" data-type="{{1}}" class="line-btn zhi"-->
<!--          wx:if="{{user_auth == 0}}">作品直投-->
<!--  </button>-->
<!--  <button bindtap="to_work_release" class="line-btn zhi" wx:else>作品直投</button>-->

  <!-- 创意/作品/众筹 -->
  <view class="data-box">
    <!-- tab栏 -->
    <view class="tab-list">
      <view bindtap="tab_change" data-tab="{{1}}" class="tab {{active_tab == 1 ? 'active' : ''}}">创意</view>
      <view bindtap="tab_change" data-tab="{{2}}" class="tab {{active_tab == 2 ? 'active' : ''}}">作品</view>
      <view bindtap="tab_change" data-tab="{{3}}" class="tab {{active_tab == 3 ? 'active' : ''}}">众筹</view>
    </view>

    <!-- 创意 -->
    <view class="chuang-box" wx:if="{{active_tab == 1}}">
<!--      <button bindgetuserinfo="auth" open-type="getUserInfo" data-type="{{2}}" class="line-btn" wx:if="{{user_auth == 0}}">我要发创意</button>-->
<!--      <navigator url="/pages/chuang-publish/chuang-publish?req_id={{id}}" class="line-btn" wx:else>我要发创意</navigator>-->
      <view class="tap-content-top">
        <view class="left">TA人创意点</view>
        <view class="sort">
          <view bindtap="order_tap" data-type="{{1}}" data-order="{{1}}"
                class="sort-item {{chuang_order == 1 ? 'active' : ''}}">默认排行
          </view>
          <view bindtap="order_tap" data-type="{{1}}" data-order="{{2}}"
                class="sort-item {{chuang_order == 2 ? 'active' : ''}}">热度排行
          </view>
        </view>
      </view>
      <view class="chuang-list">
        <navigator url="/pages/chuang-detail/chuang-detail?idea_id={{item.id}}" class="chuang" wx:for="{{idea_list}}"
                   wx:key="id">
          <view class="top-line">
            <view class="left">
              <view class="header-box">
                <image src="{{item.avatar}}" class="header"></image>

                <block wx:if="{{chuang_order == 2}}">
                  <image src="/icons/fire1.png" class="fire" wx:if="{{index == 0}}"></image>
                  <image src="/icons/fire2.png" class="fire" wx:if="{{index == 1}}"></image>
                  <image src="/icons/fire3.png" class="fire" wx:if="{{index == 2}}"></image>
                </block>
              </view>
              <view class="nickname">{{item.nickname}}</view>
            </view>
            <view class="date">{{item.create_time}}</view>
          </view>
          <view class="title-line">
            <view class="title">{{item.title}}</view>
            <view catchtap="ideaVote" data-index="{{index}}" class="agree">
              <image src="/icons/zan-active.png" wx:if="{{item.if_vote}}"></image>
              <image src="/icons/zan.png" wx:else></image>
              <text>{{item.vote}}</text>
            </view>
          </view>
          <view class="desc">{{item.content}}</view>
          <view class="tag-line" wx:if="{{item.tags_name.length > 0}}">
            <view class="tag" wx:for="{{item.tags_name}}" wx:for-item="tag">{{tag}}</view>
            <view class="tag vh" wx:for="{{item.flex_pad}}"></view>
          </view>

          <view class="pub-box">
            <view class="tou-text">投稿数：{{item.works_num}}次</view>
            <view wx:if="{{status == 1}}">
              <button bindgetuserinfo="auth" open-type="getUserInfo" data-type="{{1}}" data-idea_id="{{item.id}}" class="tou-btn" wx:if="{{user_auth == 0}}">投稿</button>
              <button catchtap="to_work_release" data-idea_id="{{item.id}}" class="tou-btn" wx:else>投稿</button>
            </view>
            <view wx:else>
              <button catchtap="no_vote" class="tou-btn">投稿</button>
            </view>
          </view>
        </navigator>
      </view>

      <view class="nomore" wx:if="{{chuang_nomore}}">
        已经没有更多了哦
      </view>

      <view class="nodata" wx:if="{{chuang_nodata}}">
        暂无数据
      </view>
    </view>

    <!-- 作品 -->
    <view class="work-box" wx:if="{{active_tab == 2}}">
      <view class="tap-content-top">
        <view class="left">TA人作品</view>
        <view class="sort">
          <view bindtap="order_tap" data-type="{{2}}" data-order="{{1}}"
                class="sort-item {{work_order == 1 ? 'active' : ''}}">默认排行
          </view>
          <view bindtap="order_tap" data-type="{{2}}" data-order="{{2}}"
                class="sort-item {{work_order == 2 ? 'active' : ''}}">热度排行
          </view>
        </view>
      </view>
      <view class="work-list">
        <navigator url="/pages/work-detail/work-detail?id={{item.id}}" class="work" wx:for="{{work_list}}" wx:key="id">
          <view class="line1">
            <view class="zuo">
              <image src="{{item.avatar}}" class="header"></image>
              <view class="nickname">{{item.nickname}}</view>
            </view>
            <view class="time-ago">
              <!-- 5天前 -->
              {{item.create_time}}
            </view>
          </view>
          <view class="under">
            <view class="title">{{item.title}}</view>
            <view class="desc">{{item.desc}}</view>
            <view class="img-box">
              <image src="{{pic_item}}" wx:for-item="pic_item" wx:for="{{item.pics}}" mode="aspectFill"
                     lazy-load></image>
              <image class="vh" wx:for="{{item.flex_pad}}"></image>
            </view>
          </view>
          <!--          <view class="chuang-line">-->
          <!--            <view class="origin">创意来源：龙鳞</view>-->
          <!--            <view class="c-zhi">创意支持 128</view>-->
          <!--          </view>-->
          <view class="other-line">
            <view class="factory">
              <text>工厂接单</text>
              <text class="amount">[数量：{{item.bid_num}}]</text>
            </view>
            <view catchtap="worksVote" data-index="{{index}}" class="agree">
              <image src="/icons/zan-active.png" wx:if="{{item.if_vote}}"></image>
              <image src="/icons/zan.png" wx:else></image>
              <text>{{item.vote}}</text>
            </view>
          </view>
        </navigator>
      </view>
      <view class="nomore" wx:if="{{chuang_nomore}}">
        已经没有更多了哦
      </view>

      <view class="nodata" wx:if="{{chuang_nodata}}">
        暂无数据
      </view>
    </view>

    <!-- 众筹 -->
    <view class="chou-box" wx:if="{{active_tab == 3}}">
      <view class="chou-list">
        <navigator url="/pages/chou-detail/chou-detail?id={{item.id}}" class="chou-line" wx:for="{{funding_list}}"
                   wx:key="id">
          <view class="img-box">
            <image src="{{item.cover}}" mode="aspectFill" lazy-load></image>
          </view>
          <view class="info">
            <view class="title">{{item.title}}</view>
            <view class="xia">
              <view class="already">
                <text class="label">已筹：</text>
                <text class="price">¥{{item.curr_money}}</text>
              </view>
              <view class="target">众筹目标：¥{{item.need_money}}</view>
              <view class="part-count">参与人数{{item.order_num}}人</view>
            </view>
          </view>
        </navigator>
      </view>

      <view class="nomore" wx:if="{{chou_nomore}}">
        已经没有更多了哦
      </view>

      <view class="nodata" wx:if="{{chou_nodata}}">
        暂无数据
      </view>
    </view>
  </view>
</view>