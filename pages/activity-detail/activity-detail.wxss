.page {
  background: #fafafa;
}

.header {
  /* border-bottom: 2rpx solid rgba(0, 0, 0, 0.07); */
}

.header .banner {
  width: 100%;
  height: 375rpx;
  vertical-align: bottom;
}

.header .title {
  padding: 15rpx 25rpx;
  font-size: 34rpx;
  color: rgba(51, 51, 51, 0.8);
  line-height: 48rpx;
  font-weight: bold;
}

.header .zhong {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 25rpx 24rpx;
  margin-top: 5rpx;
}

.header .zhong .left {
  display: flex;
  align-items: center;
}

.header .zhong .left .head-pic {
  display: flex;
  align-items: center;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.header .zhong .left .nickname {
  margin-left: 19rpx;
  color: #666;
  font-size: 26rpx;
}

.header .zhong .right {
  display: flex;
}

.header .zhong .right .people {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}

.header .zhong .right .people1 {
}

.header .zhong .right .people2 {
}

.header .zhong .right .people1 image {
  width: 24rpx;
  height: 33rpx;
}

.header .zhong .right .people2 image {
  width: 25rpx;
  height: 33rpx;
}

.header .zhong .right .people text {
  margin-left: 14rpx;
  font-size: 24rpx;
  color: #999;
}

.header .times-box {
  border: 8rpx solid rgba(0, 0, 0, 0.03);
  border-left: 0;
  border-right: 0;
  padding: 24rpx;
  line-height: 1;
}

.header .times {
  display: flex;
  justify-content: space-between;
  margin-bottom: 23rpx;
}

.header .times:last-child {
  margin-bottom: 0;
}

.header .times .time {
  display: flex;
  align-items: center;
}

.header .times .time .label {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.header .times .time .label::before {
  content: '';
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background: #999;
  margin-right: 9rpx;
}

.header .times .time .value {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #999;
}

