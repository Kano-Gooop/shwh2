.btn-box {
  display: flex;
  justify-content: space-between;
  padding: 40rpx 24rpx 4rpx;
}

.btn-box.disabled {
  filter: grayscale(1);
}

.btn-box .pub {
  border-radius: 4rpx;
  overflow: hidden;
  padding: 0;
  margin: 0;
}

.btn-box .pub.pub1 {
  box-shadow: 0 10rpx 24rpx 0 rgba(51, 51, 51, 0.55);
}

.btn-box .pub.pub2 {
  box-shadow: 0 10rpx 24rpx 0 rgba(245, 197, 86, 0.55);
}

.btn-box .pub image {
  width: 339rpx;
  height: 170rpx;
  vertical-align: bottom;
}

.zhi {
  margin: 40rpx 24rpx 0;
  background: #1b1b1b;
  color: #faf8f8;
}

.data-box {
  padding: 54rpx 24rpx 30rpx;
}

.data-box .tab-list {
  margin: 0;
}

.chuang-box .line-btn {
  margin-top: 48rpx;
}

.tap-content-top {
  margin-top: 47rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.tap-content-top .left {
  font-size: 32rpx;
  color: #333;
}

.tap-content-top .sort {
  display: flex;
}

.tap-content-top .sort .sort-item {
  margin-left: 14rpx;
  padding: 12rpx 25rpx;
  line-height: 1;
  font-size: 24rpx;
  background: #e7e7e7;
  color: #ccc;
}

.tap-content-top .sort .sort-item.active {
  background: #fff;
  color: #333;
  box-shadow: 0 1rpx 60rpx 0rpx rgba(211, 211, 211, 0.65);
}

/* 创意 start */
.chuang-box {
}

.chuang-list {
  margin-top: 40rpx;
}

.chuang-list .chuang {
  margin-bottom: 24rpx;
  background-color: #fff;
  box-shadow: 0 1rpx 60rpx 0 rgba(211, 211, 211, 0.6);
  border-radius: 4rpx;
  padding: 20rpx 24rpx 23rpx;
}

.chuang-list .chuang:last-child {
  margin-bottom: 0;
}

.chuang-list .chuang .top-line {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.chuang-list .chuang .top-line .left {
  display: flex;
  align-items: center;
}

.chuang-list .chuang .top-line .left .header-box {
  position: relative;
}

.chuang-list .chuang .top-line .left .header-box .header {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: #eee;
  vertical-align: bottom;
}

.chuang-list .chuang .top-line .left .header-box .fire {
  position: absolute;
  bottom: -1rpx;
  right: 2rpx;
  width: 14rpx;
  height: 22rpx;
}

.chuang-list .chuang .top-line .left .nickname {
  font-size: 26rpx;
  color: #000;
  opacity: 0.8;
  margin-left: 15rpx;
}

.chuang-list .chuang .top-line .date {
  color: #000;
  opacity: 0.4;
  font-size: 24rpx;
}

.chuang-list .chuang .title-line {
  margin-top: 39rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  line-height: 1;
}

.chuang-list .chuang .title-line .title {
  font-size: 32rpx;
  color: #333;
  opacity: 0.8;
}

.chuang-list .chuang .title-line .agree {
  display: flex;
  align-items: flex-end;
  flex-shrink: 0;
}

.chuang-list .chuang .title-line .agree image {
  width: 33rpx;
  height: 34.5rpx;
  margin-right: 15rpx;
}

.chuang-list .chuang .title-line .agree text {
  display: inline-block;
  /* width: 40rpx; */
  width: auto;
  font-size: 25rpx;
  color: #999;
}

.chuang-list .chuang .desc {
  margin-top: 33rpx;
  line-height: 42rpx;
  font-size: 26rpx;
  color: #333;
  opacity: 0.8;
  white-space: pre-line;
}

.chuang-list .chuang .pub-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 24rpx;
  padding-top: 21rpx;
  border-top: 2rpx solid rgba(0, 0, 0, 0.07);
}

.chuang-list .chuang .pub-box .tou-text {
  font-size: 24rpx;
  color: #ccc;
}

.chuang-list .chuang .pub-box .tou-btn {
  padding: 0;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 4rpx;
  background: #333;
  font-size: 28rpx;
  color: #fff;
  box-shadow: 0 10rpx 24rpx 0 rgba(51, 51, 51, 0.55);
  margin: 0;
}
/* 创意 end */

/* 作品 start */
.work-box {
  padding: 0;
}

.work-box .work-list {
  margin-top: 47rpx;
}

.work .time-ago {
  font-size: 24rpx;
  color: #ccc;
}

.work .chuang-line {
  line-height: 1;
  margin-top: 24rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.work .chuang-line .origin {
  letter-spacing: 1rpx;
}

