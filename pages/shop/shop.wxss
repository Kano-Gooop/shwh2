page {
    background: #fff;
    padding-top: 72rpx;
}

.main {
    min-height:100vh;
    box-sizing:border-box;
    background:#f6f7f9;
}

.main .shop-box {
    position:fixed;
    background:#fe2043;
    width:90rpx;
    height:90rpx;
    top:103rpx;
    right:43rpx;
    border-radius:50%;
    z-index:1;
    display:flex;
    align-items:center;
    justify-content:center;
}

.main .shop-box .icongouwuche {
    font-size:58rpx;
    color:#fff;
}

scroll-view.tab {
    width: 100%;
    color:#666;
    background-color: #fff;
    border-bottom: 1rpx solid #eee;
    white-space: nowrap;
    height: 72rpx;
    box-sizing: border-box;
    position: fixed;
    top: 0;
    z-index: 1;
}

.tab .tab-item {
    font-size: 28rpx;
    padding: 0 20rpx;
    display: inline-block;
    height: 72rpx;
    box-sizing: border-box;
    line-height: 72rpx;
    vertical-align: top;
}

.tab .tab-item.active {
    color: #ff9f38;
}

.main .search-box {
    background: #fff;
    position: fixed;
    top: 0;
    width: 100%;
    padding-bottom: 20rpx;
    z-index: 1;
    box-shadow:0 3rpx 10rpx 0 #eee;
}

.main .search {
    background: #f5f5f5;
    border-radius: 40rpx;
    height: 70rpx;
    margin: 0 20rpx;
    display: flex;
    align-items: center;
    padding-left: 15rpx;
}

.main .search .iconfont {
    font-size:40rpx;
    position:relative;
    top:-4rpx;
    margin-left:5rpx;
    color: #9c9c9c;
}

.main .search input {
    margin-left: 10rpx;
    font-size: 26rpx;
}

.list {
    background: #f6f7f9;
    display: flex;
    padding: 17rpx 20rpx 0;
    box-sizing: border-box;
    flex-wrap: wrap;
    justify-content: space-between;
}

.list > view {
    width: 48.5%;
}

.list > view .note {
    border-radius: 10rpx;
    overflow: hidden;
    box-shadow:0 2rpx 8rpx 2rpx #e2e3e5;
    margin-top: 22rpx;
    background: #fff;
    position: relative;
}

.list > view .note:first-child {
    margin-top: 0;
}

.list > view .note .img-box {
    width: 100%;
    height: 0;
    position: relative;
}

.list > view .note .img-box image {
    width:100%;
    height:100%;
    position:absolute;
    left:0;
    top:0;
}

.list > view .note .word {
    font-size: 24rpx;
    padding: 10rpx 15rpx;
    line-height: 1.5;
    font-weight: bold;
    color: #222;
    letter-spacing: 2rpx;
}

.list > view .note .desc {
    font-size:24rpx;
    padding: 0 15rpx;
    line-height:1.5;
    color:#888;
}

.list > view .note .xia {
    display: flex;
    padding:13rpx 20rpx 20rpx;
}

.list > view .note .xia .price {
    color: #fe2043;
    font-size: 26rpx;
}

.list > view .note .xia .origin-price {
    margin-left:10rpx;
    color:#888;
    text-decoration:line-through;
    position:relative;
    top:2rpx;
}