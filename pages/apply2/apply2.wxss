.page {
  background: #f5f5f5;
}

.body {
  font-size: 26rpx;
}

.body > .title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.apply-form {
  display: block;
}

.placeholder {
  color: #aaa;
}

.input-group.no-border {
  border-bottom: none;
}

.input-group .input-group-label {
  padding: 0;
  line-height: 1;
  white-space: nowrap;
  display: flex;
  align-items: center;
  flex-shrink: 0;
  color: #666;
  font-size: 32rpx;
}

.input-group .input-group-label::before {
  content: '*';
  color: #f00;
  font-size: 30rpx;
  margin-right: 6rpx;
  font-weight: bold;
  position: relative;
  top: 6rpx;
  visibility: hidden;
}

.input-group .input-group-label.require::before {
  visibility: visible;
}

.input-group picker, .input-group input {
  width: 100%;
  padding: 0;
  color: #666;
  font-size: 24rpx;
}

.input-group .placeholder {
  color: #ccc;
}

.input-group textarea {
  border: 1rpx solid #ddd;
  width: 80%;
  min-height: 150rpx;
  padding: 15rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.input-group-list .input-group:last-child:after {
  display: none;
}

.flex-grow-1 {
  margin-left: 20rpx;
  flex-grow: 1;
  font-size: 24rpx;
}

.code-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.code-box .code-input {
  width: 170rpx;
}

.code-box button {
  margin: 0;
  line-height: 1;
  padding: 17rpx;
  background: #ffa55a;
  color: #fff;
  font-size: 26rpx;
  border-radius: 4rpx;
}

.btn-box {
  padding-bottom: 1rpx;
  display: flex;
}

.submit-btn {
  font-size: 34rpx;
  border-radius: 4rpx;
  margin: 60rpx 24rpx;
  background: #ffa55a;
  box-sizing: border-box;
  line-height: 1;
  padding: 30rpx 0;
  flex-grow: 1;
  color: #fff;
}

/* 我写的 */

.input-group-list {
  background: #fff;
  border-top: 24rpx solid #f0f0f0;
}

.input-group {
  background: #fff;
  position: relative;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.07);
  display: flex;
  padding: 24rpx 0;
  margin: 0 24rpx;
}

.input-group.input-group2 {
  display: block;
}

.input-group.input-group2 .flex-grow-1 {
  margin-left: 15rpx;
}

.input-group.input-group2 .upload-box {
  padding-bottom: 0;
  padding-top: 24rpx;
  display: flex;
  justify-content: space-between;
  width: 652rpx;
}

.input-group:last-child {
  border-bottom: 0;
}

.input-group .upload-box {
  padding: 15rpx 0;
}

.input-group .upload {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 311rpx;
  height: 197rpx;
  background: #ecebeb;
  flex-direction: column;
}

.input-group .upload.one-pic {
  width: 652rpx;
  height: 300rpx;
}

.input-group .upload image {
  width: 50rpx;
  height: 50rpx;
}

.input-group .upload .explain {
  color: #666;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  line-height: 1;
  margin-top: 22rpx;
  font-weight: bold;
}

.input-group .upload.square {
  width: 311rpx;
  height: 311rpx;
  margin-bottom: 30rpx;
  display: inline-flex;
  vertical-align: top;
}

.input-group .upload.square:nth-child(2) {
  margin-right: 0;
}

.input-group .upload.square:nth-last-child(-n + 2) {
  margin-bottom: 0;
}

.input-group .upload .iconfont {
  font-size: 50rpx;
}

.input-group .upload-box .img-box {
  display: inline-block;
  position: relative;
}

.input-group .upload-box .img {
  width: 340rpx;
  vertical-align: bottom;
}

.input-group .upload-box .img-box.multi {
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}

.input-group .upload-box .img-box.multi:nth-child(2) {
  margin-right: 0;
}

.input-group .upload-box .img-box.multi .img {
  width: 200rpx;
  height: 200rpx;
}

.input-group .upload-box .img-de {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  position: absolute;
  right: -10px;
  top: -11rpx;
  z-index: 1;
}

.input-group .upload-box .img-box.multi .img-de {
  right: -9px;
  top: -13rpx;
}

.input-group .upload-box .img-de image {
  width: 100%;
  height: 100%;
}

.input-group .taocan {
  padding: 20rpx 0;
}

.input-group .taocan label {
  display: block;
  margin-bottom: 15rpx;
}

.input-group .taocan label:last-child {
  margin-bottom: 0;
}

