<view>
  <view class="fail" wx:if="{{status == 2}}">
    <view>※ 审核未通过</view>
    <view>原因：{{reason}}</view>
  </view>
  <view class="up-pic">
    <view class="flex pic-box">
      <block wx:key="imgbox" wx:for="{{imgbox}}" wx:key="index">
        <view class="ap-box">
          <view class="add-pic">
            <image class="add-pic" src="{{item}}"></image>
            <view class="img-de" data-deindex="{{index}}" bindtap="imgDelete1">
              <image class="img" src="/images/close.png"></image>
            </view>
          </view>
        </view>
      </block>
      <view class="add-pic plus" bindtap="addPic1" wx:if="{{imgbox.length < 9}}">
        <icon class="iconfont iconjia"/>
      </view>
    </view>
  </view>
  <input bindinput="bind_input" data-name="title" placeholder="标题" maxlength="25" value="{{title}}" />
  <textarea bindinput="bind_input" data-name="content" auto-height maxlength="200" cursor-spacing="50" placeholder="想要记点什么呢..." class="note-content" style="{{plat == 'ios' ? 'margin-left: -10rpx' : ''}}" value="{{content}}" />
  <button bindtap="noteMod" class="pub-btn">提交修改</button>
</view>