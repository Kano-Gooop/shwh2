.page {
}

.type-choose {
  background: #fafafa;
  height: 88rpx;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
}

.type-choose picker {
  width: 100%;
  height: 100%;
}

.type-choose .picker {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.type-choose .picker .text {
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.87);
}

.type-choose .picker .icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
}

.con-list {
  padding: 40rpx 24rpx;
}

.con-list .con-item {
  display: flex;
  align-items: center;
  margin-top: 24rpx;
}

.con-list .con-item:first-child {
  margin-top: 0;
}

.con-list .con-item .radio {
  flex-shrink: 0;
  width: 40rpx;
  height: 40rpx;
  box-sizing: border-box;
  border: 4rpx solid #999;
  border-radius: 50%;
}

.con-list .con-item .radio.active {
  border-color: #fcd530;
  position: relative;
}

.con-list .con-item .radio.active::after {
  content: '';
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 20rpx;
  height: 20rpx;
  background: #fcd530;
  border-radius: 50%;
}

.con-list .con-item .con {
  flex-grow: 1;
  margin-left: 20rpx;
  display: flex;
}

.con .cover {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.con .info {
  flex-grow: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.con .info .title {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

.con .info .numbers {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}

.con .info .numbers .price::before {
  content: 'ï¿¥';
}

.con .info .numbers .price {
  color: #F43530;
}

.con .info .numbers .sales {
  color: #999;
}

.con .info .numbers .sales .text {
  margin-right: 5rpx;
}