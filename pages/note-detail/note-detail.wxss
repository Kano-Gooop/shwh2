.page {
  background: #fff;
  padding-bottom: 110rpx;
}

.top-box .user {
  display: flex;
  padding: 24rpx 24rpx 0;
  align-items: center;
  justify-content: space-between;
}

.top-box .user .left {
  display: flex;
  align-items: flex-start;
}

.top-box .user .header {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.top-box .uinfo {
  margin-left: 16rpx;
}

.top-box .uinfo .nickname {
  font-size: 32rpx;
  color: #101010;
}

.top-box .uinfo .time-ago {
  margin-top: 10rpx;
  color: #999;
  font-size: 24rpx;
}

.top-box .user button {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  font-weight: bold;
  line-height: 1.9;
  padding: 0 25rpx;
  background: #fff;
  color: #d64c69;
  flex-shrink: 0;
  border-radius: 30rpx;
  border: 2rpx solid #d64c69;
  margin-right: 0;
}

.top-box .user button.focus {
  border-color: #ddd;
  background: #eee;
  color: #666;
}

.top-box .content {
  line-height: 1.6;
  white-space: pre-wrap;
  font-size: 28rpx;
  color: #101010;
  padding: 32rpx 24rpx;
}

.note-swiper {
  width: 100%;
  height: 750rpx;
}

.note-swiper swiper-item {
}

.note-swiper swiper-item image {
  width: 100%;
  height: 100%;
  vertical-align: bottom;
}

.goods-link {
  display: flex;
  padding: 24rpx;
  border-bottom: 8rpx solid rgba(0, 0, 0, 0.05);
  justify-content: flex-end;
  align-items: center;
}

.goods-link .icon {
  width: 30rpx;
  height: 30rpx;
}

.goods-link text {
  margin-left: 8rpx;
  color: #ff9446;
}

.info {
  padding: 30rpx;
}

.info .icons {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  font-weight: bold;
}

.info .icons .left {
  display: flex;
  justify-content: space-between;
}

.input-box {
  position: fixed;
  width: 100%;
  display: flex;
  box-sizing: border-box;
  padding: 20rpx;
  font-size: 26rpx;
  bottom: 0;
  align-items: center;
  background: #fff;
  z-index: 1;
}

.input-box .re-input {
  background: #f3f3f3;
  flex-grow: 1;
  border-radius: 8rpx;
  padding-left: 1em;
  line-height: 2;
  min-height: 70rpx;
}

.input-box .icon-box {
  display: flex;
  align-items: center;
  color: #999;
  width: 110rpx;
  justify-content: center;
  margin-left: 20rpx;
}

.input-box .icon-box .heart {
  width: 38rpx;
  height: 38rpx;
}

.input-box .icon-box .num {
  font-size: 24rpx;
  margin-left: 8rpx;
}

/* 评论列表 start */

.comment-box {
  padding-top: 40rpx;
}

.comment-box .title-line {
  margin: 0 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f5f5f5;
  display: flex;
  align-items: flex-end;
}

.comment-box .title-line .title {
  font-size: 40rpx;
  color: #101010;
}

.comment-box .title-line .amount {
  color: #999;
  font-size: 28rpx;
}

.comment {
  display: flex;
  padding: 20rpx;
  margin-bottom: 15rpx;
  position: relative;
}

.hr {
  position: absolute;
  width: calc(100% - 40rpx);
  border-bottom: 1rpx solid #eee;
  bottom: 0;
}

.comment .header {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  flex-shrink: 0;
  margin-top: 7rpx;
}

.comment > .content {
  flex-grow: 1;
  margin-left: 15rpx;
  position: relative;
}

.comment > .content .c-info {
}

.comment > .content .re-btn {
  position: absolute;
  top: 5rpx;
  right: 15rpx;
  padding: 15rpx 30rpx;
  margin: -15rpx -30rpx 0 0;
}

.comment > .content .c-info > .nickname {
  font-size: 28rpx;
}

.comment > .content .c-info > .date {
  font-size: 20rpx;
  color: #999;
  margin-top: 5rpx;
}

.comment > .content .c-info > .text {
  margin: 10rpx 0;
}

.comment > .content .c-info > .re-comment-box {
  background: #f5f5f5;
  padding: 15rpx;
}

.comment .re-comment {
  display: flex;
  padding-bottom: 10rpx;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.comment .re-comment:last-child {
  border-bottom: none;
  padding-bottom: 0;
  margin-bottom: 0;
}

.comment .re-comment .re-header {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  flex-shrink: 0;
  margin-top: 6rpx;
}

.comment .re-comment .re-info {
  flex-grow: 1;
  margin-left: 15rpx;
  position: relative;
}

.comment .re-comment .re-info .nickname {
}

.comment .re-comment .re-info .date {
  font-size: 20rpx;
  color: #999;
  margin-top: 3rpx;
}

.comment .re-comment .re-info .re-re-btn {
  position: absolute;
  top: 5rpx;
  right: 15rpx;
  padding: 15rpx 30rpx;
  margin: -15rpx -30rpx 0 0;
}

.comment .re-comment .re-info .re-text {
  line-height: 1.5;
  margin: 10rpx 0;
}

.comment .re-comment .re-info .re-text navigator {
  display: inline;
}

/* 评论列表 end */
