.page {
}

.banner {
  width: 100%;
  height: 400rpx;
}

.banner .si {
  width: 100%;
}

.banner .si image {
  width: 100%;
  height: 100%;
}

.publish {
  margin: 20rpx auto 0;
  width: 702rpx;
  height: 120rpx;
}

.publish .btn {
  vertical-align: bottom;
  width: 100%;
  height: 100%;
}

.hot-activity {
  margin-top: 40rpx;
}

.hot-activity > .title {
  margin: 0 24rpx;
  padding-bottom: 26rpx;
  border-bottom: 2rpx solid #f5f5f5;
  color: #101010;
  font-size: 40rpx;
}

.hot-list {
  margin-top: 18rpx;
  padding: 0 24rpx;
  font-size: 0;
  width: 100%;
  box-sizing: border-box;
  white-space: nowrap;
}

.hot-list .activity {
  width: 400rpx;
  margin-right: 24rpx;
  display: inline-block;
}

.hot-list .activity:last-child {
  margin-right: 0;
}

.hot-list .activity .cover {
  width: 100%;
  height: 200rpx;
  vertical-align: bottom;
}

.hot-list .activity .info {
  margin-top: 22rpx;
}

.hot-list .activity .info .title {
  color: #333;
  font-size: 28rpx;
}

.hot-list .activity .info .pd {
  margin-top: 27rpx;
  display: flex;
  justify-content: space-between;
}

.hot-list .pd .people {
  display: flex;
  align-items: center;
}

.hot-list .pd .people image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.hot-list .pd .people text {
  color: #999;
  font-size: 24rpx;
}

.hot-list .pd .end {
  display: flex;
  align-items: center;
}

.hot-list .pd .end image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.hot-list .pd .end text {
  color: #999;
  font-size: 24rpx;
}

.tab-list2 {
  margin-top: 40rpx;
  display: flex;
  background: #f6f6f6;
  height: 88rpx;
}

.tab-list2 .tab {
  width: 0;
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #101010;
}

.tab-list2 .tab.active {
  font-weight: bold;
  font-size: 32rpx;
  position: relative;
}

.tab-list2 .tab.active::after {
  content: '';
  position: absolute;
  width: 40rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: #FCD530;
  left: 0;
  right: 0;
  margin: auto;
  bottom: 0;
}

.activity-list {
  padding: 42rpx 24rpx 0;
}

.activity-list .activity:first-child {
  margin-top: 0;
}

.activity-list .activity {
  margin-top: 40rpx;
}

.activity-list .activity .cover {
  width: 100%;
  height: 352rpx;
  border-radius: 8rpx;
}

.activity-list .activity .info {
  margin-top: 14rpx;
}

.activity-list .activity .info .title {
  line-height: 1.4;
  font-size: 28rpx;
  color: #333;
}

.activity-list .pd {
  margin-top: 28rpx;
  display: flex;
  justify-content: space-between;
}

.activity-list .pd .people {
  display: flex;
  align-items: center;
}

.activity-list .pd .people image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.activity-list .pd .people text {
  font-size: 24rpx;
  color: #999;
}

.activity-list .pd .end {
  display: flex;
  align-items: center;
}

.activity-list .pd .end image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.activity-list .pd .end text {
  font-size: 24rpx;
  color: #999;
}

.activity-list .status {
  position: absolute;
  top: 12rpx;
  left: 18rpx;
  width: 120rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  opacity: 0.6;
  border-radius: 8rpx;
}