<view class="page">
  <view class="chou-box">
    <navigator url="/pages/chou-detail/chou-detail?id={{item.id}}" class="chou-line" wx:for="{{funding_list}}" wx:key="id">
      <view class="img-box">
        <image lazy-load src="{{item.cover}}" mode="aspectFill"></image>
      </view>
      <view class="info">
        <view class="title">{{item.title}}</view>
        <view class="xia">
          <view class="already">
            <text class="label">已筹：</text>
            <text class="price">¥{{item.curr_money}}</text>
          </view>
          <view class="target">众筹目标：¥{{item.need_money}}</view>
          <view class="part-count">参与人数{{item.order_num}}人</view>
        </view>
      </view>
    </navigator>
  </view>

  <view class="nomore" wx:if="{{nomore}}">
    已经没有更多了哦
  </view>

  <view class="nodata" wx:if="{{nodata}}">
    暂无数据
  </view>
</view>