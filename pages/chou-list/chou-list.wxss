.page {
}

.banner {
  width: 100%;
  height: 400rpx;
}

.banner .si {
  width: 100%;
}

.banner .si image {
  width: 100%;
  height: 100%;
}

.init-chou-box {
  display: flex;
  justify-content: center;
  padding: 24rpx 0;
  background: #fff;
}

.init-chou-box .a {
  width: 702rpx;
}

.init-chou-box .a .init-img {
  width: 100%;
  height: 120rpx;
  box-shadow: 0 4rpx 20rpx 0 rgba(52, 167, 174, 0.65);
  border-radius: 60rpx;
}

.chou-box {
  border-top: 8rpx solid #ebf0f0;
  padding: 40rpx 24rpx 0;
}

.chou-box .title-line {
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.chou-box .title-line .title {
  font-size: 40rpx;
  color: #101010;
}

.chou-box .title-line .status {
}

.chou-box .title-line .status .picker {
  display: flex;
  align-items: center;
}

.chou-box .title-line .status .text {
  font-size: 28rpx;
  color: #999;
}

.chou-box .title-line .status .down {
  width: 23.5rpx;
  height: 15rpx;
  margin-left: 10rpx;
}

.chou-box .chou-line {
  box-shadow: 0 1rpx 27rpx 0 rgba(237, 237, 237, 0.75);
  border-radius: 4px;
  background: #fff;
  margin-bottom: 40rpx;
  margin-top: 0;
}

.chou-box .chou-line:last-child {
  margin-bottom: 0;
}

.chou-box .chou-list {
  margin-top: 30rpx;
}

.chou-list .img-box {
  position: relative;
}

.chou-list .status {
  position: absolute;
  top: 12rpx;
  left: 18rpx;
  width: 120rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #fff;
}

.chou-list .status.yure {
  background: #fcd530;
}

.chou-list .status.while {
  background: #398dff;
}

.chou-list .status.end {
  background: #d2d2d2;
}
