@import '/wxParse/wxParse.wxss';

.page {
  background: #f6f7f9;
  padding-bottom: 100rpx;
}

view {
  overflow: visible;
}

.top-swiper {
  height: 750rpx;
  background: #fff;
  width: 100%;
}

.top-swiper swiper-item {
  display: flex;
  align-items: center;
}

.top-swiper image {
  width: 100%;
  height: 100%;
}

.top-video {
  width: 100%;
  height: 421rpx;
}

.info-box {
  margin-top: 30rpx;
  color: #333;
}

.info-box .pt {
  padding: 25rpx;
  background: #fff;
  /* display: flex; */
  justify-content: space-between;
  align-items: center;
  overflow: visible;
}

.info-box .pt .price {
  color: #fe2043;
  font-weight: bold;
  margin-top: 20rpx;
}

.info-box .pt .price .pp {
  font-size: 35rpx;
}

.info-box .pt .price .pp::before {
  content: '￥';
  font-size: 26rpx;
}

.info-box .pt .price .join-vip {
  display: flex;
  margin-top: 15rpx;
  align-items: center;
}

.join-vip .v-price-box {
  display: flex;
  font-size: 26rpx;
  font-weight: normal;
}

.join-vip .v-price-box .label {
  color: #333;
}

.join-vip .v-price-box .v-price::before {
  font-size: 22rpx;
  content: '￥';
}

.join-vip .v-price-box .v-price {
  color: #f40;
}

.join-vip .vip-btn {
  margin-left: 15rpx;
  border-radius: 4rpx;
  height: 44rpx;
  line-height: 44rpx;
  padding: 0 30rpx;
  font-size: 24rpx;
  font-weight: normal;
  background: #f40;
  color: #fff;
}

.info-box .pt .price .origin-price {
  color: #888;
  font-size: 28rpx;
  text-decoration: line-through;
  margin-left: 10rpx;
  font-weight: normal;
}

.info-box .pt .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: visible;
}

.info-box .pt .title .goods-name {
  font-size: 30rpx;
  font-weight: bold;
}

.info-box .pt .title .share {
  flex-shrink: 0;
  background: #f4f4f4;
  display: flex;
  align-items: center;
  margin: 0 -25rpx 0 24rpx;
  padding: 0 15rpx 0 20rpx;
  box-shadow: none;
  border: 0;
  border-radius: 30rpx 0 0 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.info-box .pt .title .share image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.info-box .pt .title .share .text {
  color: #9b9b9b;
  font-size: 24rpx;
}

.info-box .pt .label-list {
  margin-top: 15rpx;
  display: flex;
}

.info-box .pt .label-list .label {
  padding: 9rpx 20rpx;
  border-radius: 4rpx;
  border: solid 2rpx #ffbe00;
  font-size: 24rpx;
  color: #ffbe00;
  margin-right: 24rpx;
}

.info-box .pt .label-list .label:last-child {
  margin-right: 0;
}

.info-box .stock-carriage {
  padding: 0 25rpx 25rpx;
  background: #fff;
  display: flex;
}

.info-box .stock-carriage > view {
  margin-right: 20rpx;
}

.info-box .desc {
  margin-top: 20rpx;
  background: #fff;
  padding: 25rpx;
  font-size: 28rpx;
}

.title-redtiao::before {
  content: '';
  border-left: 5rpx solid #fe2043;
  margin-right: 10rpx;
}

.info-box .desc .title {
  line-height: 1.1;
  font-weight: bold;
  font-size: 30rpx;
  margin-bottom: 25rpx;
}

.info-box .store {
  margin-top: 20rpx;
  background: #fff;
  padding: 25rpx;
  font-size: 28rpx;
  position: relative;
}

.info-box .store .info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-box .store .info .zuo {
  display: flex;
  align-items: center;
}

.info-box .store .info .zuo .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.info-box .store .info .zuo .org {
  margin-left: 15rpx;
}

.info-box .store .info .jin {
  font-size: 24rpx;
  background: #ff6944;
  color: #fff;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 25rpx;
}

.info-box .store .info .jin image {
  width: 14rpx;
  height: 24rpx;
}

.info-box .params {
  display: none;
  background: #fff;
  margin-top: 20rpx;
  padding: 25rpx;
}

.info-box .params .title {
  line-height: 1.1;
  font-weight: bold;
  font-size: 30rpx;
  margin-bottom: 25rpx;
}

.info-box .params .line {
  display: flex;
  line-height: 1.5;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}

.info-box .params .line:last-child {
  margin-bottom: 0;
}

.info-box .params .name {
  color: #9b9b9b;
  width: 110rpx;
  flex-shrink: 0;
}

.info-box .params .value {
  flex-shrink: 1;
  margin-left: 25rpx;
}

.bottom-content {
  background: #fff;
  margin-top: 15rpx;
  padding: 0 25rpx;
}

.bottom-content .tab-list2 {
  display: flex;
}

.bottom-content .tab-list2 .tab {
  width: 0;
  flex-grow: 1;
  height: 84rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ff7e8d;
  border-bottom: 5rpx solid rgba(60, 120, 245, 0.07);
  font-size: 32rpx;
}

.bottom-content .tab-list2 .tab.active {
  color: #ff2740;
  border-bottom-color: #ff7e8d;
}

.bottom-content .content-wrapper {
  background: #fff;
  margin-top: 15rpx;
  overflow: visible;
}

.comment-box {
}

.comment-box .comment:first-child {
}

.comment-box .comment {
  box-shadow: 0 1rpx 76rpx 0 rgba(241, 238, 238, 0.75);
  padding: 24rpx 25rpx 31rpx;
  border-bottom: 2rpx solid #f4f0f0;
  background: #fff;
}

.comment-box .comment .user-line {
  display: flex;
  align-items: center;
}

.comment-box .comment .user-line .header {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.comment-box .comment .user-line .info {
  margin-left: 25rpx;
  flex-grow: 1;
}

.comment-box .comment .user-line .info .nickname {
  font-size: 26rpx;
  color: #3d3737;
}

.comment-box .comment .user-line .info .pd {
  margin-top: 9rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: rgba(61, 55, 55, 0.4);
}

.comment-box .comment .user-line .info .pd .param {
  width: 0;
  flex-grow: 1;
}

.comment-box .comment .user-line .info .pd .date {
  flex-shrink: 0;
  margin-left: 20rpx;
}

.comment-box .comment .com-content {
  margin-top: 12rpx;
  font-size: 26rpx;
  line-height: 39rpx;
  color: #3d3737;
}

.foot {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  box-shadow: -2rpx 0 3rpx #eee;
}

.foot .shop-car {
  width: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: #fff;
  align-items: center;
  color: #888;
  padding: 5rpx 10rpx 5rpx;
  box-sizing: border-box;
  position: relative;
}

.foot .shop-car .iconfont {
  font-size: 45rpx;
  padding-bottom: 5rpx;
}

.foot .shop-car .sub {
  position: absolute;
  right: 34rpx;
  top: 1rpx;
  width: 32rpx;
  height: 32rpx;
  color: #fff;
  border-radius: 50%;
  background: #ff2740;
  display: flex;
  font-size: 20rpx;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.foot .shop-car view {
}

.foot .btn {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}

.foot .add {
  flex-grow: 1;
  background: #ff7e8d;
  color: #fff;
}

.foot .buy {
  flex-grow: 1;
  background: #ff2740;
  color: #fff;
}

.param-modal {
  position: fixed;
  top: 0;
  left: 0;
  box-sizing: border-box;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0);
  transition: 0.2s all;
}

.param-modal.active {
  background: rgba(0, 0, 0, 0.7);
}

.param-modal .content {
  position: absolute;
  bottom: 0;
  background: #fff;
  width: 100%;
  overflow: visible;
  transition: 0.2s all;
  transform: translateY(100%);
}

.param-modal.active .content {
  transform: translateY(0);
}

.param-modal .content .close {
  position: absolute;
  color: #bbb;
  right: 30rpx;
  top: 9rpx;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.param-modal .content .close .iconfont {
  font-size: 26rpx;
}

.param-modal .content .header {
  display: flex;
  overflow: visible;
}

.param-modal .content .header .cover {
  width: 200rpx;
  height: 200rpx;
  margin-top: -35rpx;
  margin-left: 24rpx;
  border-radius: 4rpx;
}

.param-modal .content .header .info {
  flex-grow: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.param-modal .header .info .price {
  color: #fe2043;
  font-size: 34rpx;
  display: flex;
  align-items: flex-end;
}

.param-modal .price .price-now {
}

.param-modal .price .price-origin {
  color: #888;
  font-size: 28rpx;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.param-modal .header .info .choose-text {
  font-size: 28rpx;
  color: #333;
  margin-top: 12rpx;
}

.param-modal .header .info .stock {
  font-size: 24rpx;
  color: #888;
  margin-top: 13rpx;
}

.param-modal .param {
  border-top: 1rpx solid #eee;
  margin: 30rpx 0 30rpx 20rpx;
  padding: 20rpx 10rpx 0;
  font-size: 26rpx;
}

.param-modal .param .param-name {
  color: #666;
}

.param-modal .param .param-list {
  display: flex;
  margin-top: 19rpx;
  flex-wrap: wrap;
}

.param-modal .param .param-list > view {
  font-size: 28rpx;
  background: #f6f6f6;
  padding: 6rpx 24rpx;
  border-radius: 30rpx;
  border: 1rpx solid #f6f6f6;
  margin-right: 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.param-modal .param .param-list > view.active {
  color: #fe2043;
  background: #fff;
  border: 1rpx solid #fe2043;
}

.param-modal .param .param-list > view.disabled {
  color: #bbbb;
}

.param-modal .amount-block {
  border-top: 1rpx solid #eee;
  margin: 30rpx 0 30rpx 20rpx;
  padding: 20rpx 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.param-modal .amount-block .label {
  font-size: 30rpx;
}

.param-modal .amount-block .amount-box {
  display: flex;
  align-items: center;
  color: #666;
  align-self: flex-end;
}

.param-modal .amount-block .amount-box .amount {
  position: relative;
  top: -2rpx;
  width: 125rpx;
  text-align: center;
  color: #000;
  font-size: 34rpx;
}

.param-modal .amount-block .amount-box .iconfont {
  font-size: 50rpx;
}

.param-modal .amount-block .amount-box .iconfont.disabled {
  color: #bbb;
}

.param-modal .param-buy-btn {
  background: #fd2941;
  color: white;
  border-radius: 0;
  font-size: 32rpx;
  line-height: 3.3;
  margin-top: 60rpx;
}

