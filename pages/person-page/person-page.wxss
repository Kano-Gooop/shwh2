.page {
}

.top {
  padding: 24rpx;
  display: flex;
  align-items: center;
}

.top .logo-box {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top .logo-box .logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.top .logo-box .id {
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #999;
  background: #eee;
  padding: 6rpx 16rpx;
  border-radius: 4rpx;
}

.top .info {
  flex-grow: 1;
  margin-left: 40rpx;
}

.info .title-line {
  display: flex;
  align-items: center;
}

.info .title-line .title {
  line-height: 1.4;
  font-size: 32rpx;
  color: #101010;
  flex-grow: 1;
}

.info .title-line .btn {
  flex-shrink: 0;
  margin-left: 15rpx;
  width: 116rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  background: #ddd;
  color: #fff;
  font-size: 28rpx;
}

.info .title-line .btn.focus {
  background: #fcaf30;
}

.info .o-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 24rpx;
  border-top: 2rpx solid #f5f5f5;
  padding-top: 24rpx;
}

.info .numbers {
  display: flex;
}

.info .numbers .num {
  display: flex;
  align-items: flex-end;
  margin-right: 40rpx;
}

.info .numbers .num:last-child {
  margin-right: 0;
}

.info .numbers .num .amount {
  font-size: 32rpx;
  color: #333;
}

.info .numbers .num .text {
  font-size: 22rpx;
  margin-left: 8rpx;
  color: #999;
}

.info .o-box .role {
  color: #fff;
  font-size: 24rpx;
  background: #ff6944;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  padding: 0 15rpx;
  border-radius: 8rpx;
}

.tabs {
  border-top: 8rpx solid rgba(0, 0, 0, 0.05);
  padding: 40rpx 24rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.07);
}

.tabs .tab {
  font-size: 28rpx;
  color: #101010;
  width: 0;
  flex-grow: 1;
  text-align: center;
}

.tabs .tab.active {
  font-size: 32rpx;
  font-weight: bold;
  position: relative;
}

.tabs .tab.active::after {
  content: '';
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  bottom: -20rpx;
  width: 40rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: #fcd530;
}

.goods-box {
  padding: 38rpx 24rpx 0;
}

.goods-box .goods-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.goods-list .goods2 {
  width: 340rpx;
  box-sizing: border-box;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  overflow: hidden;
  margin-top: 24rpx;
}

.goods-list .goods2:nth-child(-n + 2) {
  margin-top: 0;
}

.goods2 .cover {
  width: 100%;
  height: 336rpx;
}

.goods2 .info {
  padding: 19rpx 14rpx 24rpx;
}

.goods2 .info .title {
  font-size: 28rpx;
  line-height: 1.4;
}

.goods2 .info .shop {
  margin-top: 15rpx;
  color: #666;
  font-size: 24rpx;
}

.goods2 .info .price::before {
  content: 'ï¿¥';
  margin-right: 5rpx;
}

.goods2 .info .price {
  margin-top: 30rpx;
  font-size: 32rpx;
  color: #f43530;
}

.note-box {
}

.note-box .note-list {
}

.note-list .note {
  padding: 31rpx 24rpx 40rpx;
  border-bottom: 4rpx solid rgba(0, 0, 0, 0.05);
}

.note .title {
  line-height: 1.5;
  font-size: 28rpx;
  color: #101010;
}

.note .image-box {
  margin-top: 33rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.note .image-box .img {
  margin-top: 18rpx;
}

.note .image-box.one {
}

.note .image-box.one .img {
  width: 100%;
  margin-top: 0;
}

.note .image-box.four {
}

.note .image-box.four .img {
  border-radius: 8rpx;
  width: 342rpx;
  height: 342rpx;
}

.note .image-box.four .img:nth-child(-n + 2) {
  margin-top: 0;
}

.note .image-box.other {
}

.note .image-box.other .img {
  border-radius: 8rpx;
  width: 222rpx;
  height: 222rpx;
}

.note .image-box.other .img:nth-child(-n + 3) {
  margin-top: 0;
}

.note .info {
  margin-top: 24rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.note .info .left {
  display: flex;
}

.note .info .left .comment {
}

.note .info .left .agree {
  margin-left: 58rpx;
}

.note .info .time-ago {
}

.intro-box {
  padding: 27rpx 24rpx 38rpx;
}

.intro-box .intro {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-line;
}
