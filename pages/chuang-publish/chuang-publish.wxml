<view class="page">
  <view class="form1">
    <view class="form-item">
      <view class="title">创意标题</view>
      <input bindinput="bind_input" data-name="title" value="{{title}}" placeholder="请输入标题" placeholder-class="input-place" maxlength="20"/>
    </view>
    <view class="form-item">
      <view class="title">创意简述</view>
      <view class="textarea-box">
        <textarea bindinput="bind_input" data-name="content" value="{{content}}" auto-height maxlength="200" cursor-spacing="50" placeholder="创意内容..." class="{{is_ios ? 'text-plat-ios' : 'text-plat'}}" placeholder-class="input-place" />
        <view class="count">
          <text>{{content_count}}</text> / 200
        </view>
      </view>
    </view>
    <view class="form-item">
      <view class="title">创意标签</view>
      <view class="tag-box-wai">
        <view class="tag-box" wx:for="{{tag_list}}" wx:key="type">
          <view class="title">{{item.name}}</view>
          <view class="tag-list">
            <view bindtap="tag_choose" data-index="{{index}}" data-sub_index="{{sub_index}}" class="tag {{tag_item.selected ? 'active' : ''}}" wx:for="{{item.child}}" wx:for-item="tag_item" wx:for-index="sub_index" wx:key="id">{{tag_item.tag_name}}</view>
            <view class="tag vh" wx:for="{{item.flex_pad}}"></view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <button bindtap="createIdea" class="line-btn">发布创意</button>
</view>