page {
    padding-top: 1rpx;
    box-sizing: border-box;
}

.release-btn {
    position:fixed;
    top:103rpx;
    right:27rpx;
    font-size:26rpx;
    z-index:1;
    background:#888;
    border-radius:50%;
    opacity:1;
    width:100rpx;
    height:100rpx;
    box-shadow:border-box;
    display:flex;
    justify-content:center;
    align-items:center;
    text-align:center;
    flex-direction:column;
    color:white;
}

.tab {
    color:#666;
    display:flex;
    justify-content:space-around;
    border-bottom:1rpx solid #eee;
    margin-top:21rpx;
}

.tab .tab-item {
    font-size:28rpx;
    line-height:2.6;
    padding:0 5rpx;
}

.tab .tab-item.active {
    color: #ff9f38;
}

.block {
    padding: 20rpx 35rpx;
    position: relative;
}

.block .two-box {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-bottom: -30rpx;
}

.block .item-half {
    width: 330rpx;
    border-radius: 10rpx;
    overflow: hidden;
    margin-bottom: 40rpx;
    box-shadow: 3rpx 10rpx 30rpx #ddd;
    background: #fff;
}

.block .item-half image {
    width: 100%;
    height: 265rpx;
    vertical-align: bottom;
}

.block .item-half .texts {
    padding: 15rpx;
}

.block .item-half .texts .title {
    overflow: hidden;
    white-space: nowrap;
    text-overflow:ellipsis;
}

.block .item-half .texts .info-box {
    display: flex;
    justify-content: space-between;
    margin-top: 10rpx;
    color: #888;
    font-size: 22rpx;
}

.block .item-half .info-box .user {
    display: flex;
    align-items: center;
}

.block .item-half .info-box .user image {
    border-radius: 50%;
    width: 50rpx;
    height: 50rpx;
}

.block .item-half .info-box .user .nickname {
    margin-left: 10rpx;
}

.block .item-half .info-box .iconfont {
    font-size: 24rpx;
}

.block .item-half .info-box .user {

}

.block .item-half .info-box .vote {
    display: flex;
    align-items: center;
}

.block .item-half .info-box .iconnavicon-tp {
    font-size:30rpx;
    position:relative;
    top:-7rpx;
    margin-right:7rpx;
}