page {
    background: #f8f8f8;
}

.page {
    padding:30rpx 30rpx 25rpx
}

.block .two-box {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-bottom: -30rpx;
}

.block .item-half {
    width: 330rpx;
    border-radius: 10rpx;
    overflow: hidden;
    margin-bottom: 40rpx;
    box-shadow: 3rpx 10rpx 30rpx #ddd;
    background: #fff;
    position: relative;
}

.block .item-half .status {
    position: absolute;
    background: #ff684f;
    width: 96rpx;
    height: 40rpx;
    font-size: 24rpx;
    color: #fff;
    letter-spacing: 2rpx;
    top: 22rpx;
    right: 24rpx;
    border-radius: 4rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.block .item-half image {
    width: 100%;
    height: 265rpx;
    vertical-align: bottom;
}

.block .item-half .texts {
    padding: 15rpx;
}

.block .item-half .texts .title {
    overflow: hidden;
    white-space: nowrap;
    text-overflow:ellipsis;
}

.block .item-half .texts .req-title {
    margin-top: 10rpx;
    color: #666;
}

.block .item-half .info-box .user {
    display: flex;
    align-items: center;
}

.block .item-half .info-box .user image {
    border-radius: 50%;
    width: 50rpx;
    height: 50rpx;
}

.block .item-half .info-box .user .nickname {
    margin-left: 10rpx;
}

.block .item-half .info-box .iconfont {
    font-size: 24rpx;
}

.block .item-half .info-box .user {
}

.block .item-half .info-box .vote {
    display: flex;
}

.block .item-half .info-box .vote > view {
    display: flex;
    align-items: center;
}

.block .item-half .info-box .iconnavicon-tp {
    font-size:30rpx;
    position:relative;
    top:-7rpx;
    margin-right:7rpx;
}

.block .item-half .info-box .iconamazonbiddingsystem {
    font-size:30rpx;
    position:relative;
    top:-7rpx;
    margin-right:7rpx;
    margin-left: 15rpx;
}

