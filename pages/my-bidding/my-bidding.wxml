<view class="page">
  <view class="block">
    <view class="two-box">
      <navigator url="/pages/bidding-detail/bidding-detail?id={{item.work_id}}" data-id="{{item.id}}" class="item-half" wx:for="{{biddingList}}" wx:key="id">
        <image src="{{item.pics[0]}}" mode="aspectFill"></image>
        <view class="texts">
          <view class="title">{{item.work_title}}</view>
          <view class="req-title">“{{item.req_title}}”</view>
        </view>
      </navigator>
    </view>
  </view>
  <view class="nodata" wx:if="{{nodata}}">
    暂无参赛作品
  </view>
</view>