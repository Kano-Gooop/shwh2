.body {
    padding: 0 35rpx;
    font-size: 26rpx;
}

.body > .title {
    font-size: 34rpx;
    font-weight: bold;
    margin-bottom: 30rpx;
}

.apply-form {
    display:block;
}

.placeholder {
    color: #aaa;
}

.field-group {
    border:2rpx solid #ddd;
    border-radius:15rpx;
    overflow:hidden;
    margin-top:28rpx;
}

.field-group .field-title {
    font-size:30rpx;
    font-weight:bold;
    text-align:center;
    padding-top:18rpx;
}

.input-group {
    background: #fff;
    position: relative;
    border-bottom:1rpx solid #eee;
    padding:20rpx 0;
}

.input-group:last-child, .input-group.no-border {
    border-bottom: none;
}

.input-group .input-group-label {
    padding:0;
    line-height:inherit;
    width:170rpx;
    white-space: wrap;
    display:flex;
    align-items:center;
    justify-content:flex-end;
    flex-shrink: 0;
    text-align: right;
}

.input-group .input-group-label.require::before {
    content: '*';
    color: #f00;
    font-size: 30rpx;
    margin-right: 6rpx;
    font-weight: bold;
    position: relative;
    top: 6rpx;
}

.input-group input {
    height: 100%;
    width: 100%;
    padding: 0;
    font-size: inherit;
    line-height: inherit;
}

.input-group textarea {
    border: 1rpx solid #ddd;
    width: 90%;
    min-height: 150rpx;
    padding: 15rpx;
    margin-top: 15rpx;
}

.flex-grow-1.picker-box {
    display: flex;
}

.input-group picker {
    display:flex;
    align-items:center;
    margin-right: 35rpx;
}

.input-group picker:last-child {
    margin-right: 0;
}

.input-group picker .picker {
    display: flex;
    align-items: center;
}

.input-group picker .picker .title {
    font-weight: bold;
    flex-shrink: 0;
}

.input-group picker .picker .box {
    border:2rpx solid #ddd;
    border-radius:8rpx;
    padding: 0 10rpx;
    text-align:center;
    min-height: 50rpx;
    line-height: 50rpx;
}

.input-group picker .picker .box.date {
    /*min-width:150rpx;*/
    min-width: 200rpx;
}

.input-group picker .picker .box.time {
    min-width: 75rpx;
}

/*.input-group */

.input-group-list {
    border-top: 1rpx solid #e9e9e9;
}

.input-group-list .input-group:last-child:after {
    display: none;
}

.flex-grow-1 {
    margin-left:32rpx;
    flex-grow:1;
    margin-right:40rpx;
}

.code-box {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.code-box .code-input {
    width: 170rpx;
}

.code-box button {
    margin:0;
    width:200rpx;
    padding:0;
}

.btn-box {
    padding-bottom: 50rpx;
}

.submit-btn {
    border-radius:10rpx;
    color:#fff;
    font-size:32rpx;
    border-radius:10rpx;
    margin-top:30rpx;
    background:#ff9f38;
}

/* 我写的 */
.input-group-list {
    background:#fff;
    border-top: none;
}

.input-group {
    min-height: 80rpx;
    display: flex;
}

.input-group .upload-box {
    padding: 15rpx 0;
}

.input-group .upload {
    display:flex;
    justify-content:center;
    align-items:center;
    border:1px dashed #ddd;
    width:340rpx;
    height:220rpx;
}

.input-group .upload.square {
    width: 200rpx;
    height: 200rpx;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
    display: inline-flex;
    vertical-align: top;
}

.input-group .upload.square:nth-child(2) {
    margin-right: 0;
}

.input-group .upload .iconfont {
    font-size: 50rpx;
}

.input-group .upload-box .img-box {
    display: inline-block;
    position: relative;
}

.input-group .upload-box .img {
    width: 340rpx;
    vertical-align: bottom;
}

.input-group .upload-box .img-box.multi {
    margin-right: 30rpx;
    margin-bottom: 30rpx;
}

.input-group .upload-box .img-box.multi:nth-child(2) {
    margin-right: 0;
}

.input-group .upload-box .img-box.multi .img {
    width: 200rpx;
    height: 200rpx;
}

.input-group .upload-box .img-de {
    width:40rpx;
    height:40rpx;
    border-radius:50%;
    position:absolute;
    right:-10px;
    top:-11rpx;
    z-index:1;
}

.input-group .upload-box .img-box.multi .img-de {
    right:-9px;
    top:-13rpx;
}

.input-group .upload-box .img-de image {
    width: 100%;
    height: 100%;
}

.input-group .taocan {
    padding: 20rpx 0;
}

.input-group .taocan label {
    display: block;
    margin-bottom: 15rpx;
}

.input-group .taocan label:last-child {
    margin-bottom: 0;
}

page {
