.page {
  background: #fafafa;
  padding: 40rpx 0;
}

.my-chuang-list {
  padding: 0 24rpx;
}

.my-chuang-list .chuang {
  margin-bottom: 24rpx;
  background-color: #fff;
  box-shadow: 0 1rpx 60rpx 0 rgba(227, 227, 227, 0.75);
  border-radius: 4rpx;
  padding: 24rpx 30rpx;
}

.my-chuang-list .chuang:last-child {
  margin-bottom: 0;
}

.my-chuang-list .chuang .top-line {
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 1;
}

.my-chuang-list .chuang .top-line .title {
  font-size: 34rpx;
  color: #333;
}

.my-chuang-list .chuang .top-line .bo {
  font-size: 24rpx;
  color: #999;
  margin-right: -7rpx;
}

.my-chuang-list .chuang .top-line .bo .label {
  margin-right: 16rpx;
}

.my-chuang-list .chuang .top-line .bo .name {
}

.my-chuang-list .chuang .desc {
  margin-top: 16rpx;
  font-size: 28rpx;
  line-height: 42rpx;
  color: #666;
  text-align: justify;
}

.my-chuang-list .chuang .foot-info {
  display: flex;
  justify-content: space-between;
  line-height: 1;
  margin-top: 24rpx;
  color: #ccc;
  font-size: 24rpx;
}

