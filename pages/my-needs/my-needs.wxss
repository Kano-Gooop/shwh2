.page {
  padding: 25rpx 24rpx 0;
  box-sizing: border-box;
  min-height: 100vh;
}

.need-list {
  line-height: 1;
}

.pub-round-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 0 4rpx 5rpx #888;
  bottom: 50rpx;
  top: auto;
  box-sizing: border-box;
  width: 80rpx;
  height: 80rpx;
}

.pub-round-btn image {
  width: 40rpx;
  height: 40rpx;
}

.need-list .need {
  padding-bottom: 34rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.03);
  margin-bottom: 23rpx;
  position: relative;
}

.need .btn-box {
  display: flex;
  position: absolute;
  right: 15rpx;
  bottom: 15rpx;
  z-index: 1;
}

.need .btn-box > view {
  margin-right: 15rpx;
}

.need .btn-box > view:last-child {
  margin-right: 0;
}

.need .btn-box .status {
  padding: 8rpx 18rpx;
  background: #ddd;
  border-radius: 5rpx;
}

.need .btn-box .no {
  color: red;
}

.need .btn-box .wait {
  color: #ff7a09;
}

.need .btn-box .edit {
  padding: 8rpx 18rpx;
  background: #ddd;
  border-radius: 5rpx;
  color: #666;
}

.need-list .need:last-child {
  padding-bottom: 0;
  bottom: 0;
  margin-bottom: 0;
}

.need .auth-line {
  display: flex;
  align-items: center;
}

.need .auth-line .avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.need .auth-line .nickname {
  margin-left: 18rpx;
  font-size: 26rpx;
  color: #999;
}

.need .auth-line .role {
  margin-left: 16rpx;
  color: #f49927;
  font-size: 22rpx;
}

.need .auth-line .shu {
  margin-left: 13rpx;
  width: 2rpx;
  height: 18rpx;
  background: #999;
}

.need .auth-line .time {
  margin-left: 10rpx;
  font-size: 22rpx;
  color: #999;
}

.need .title {
  margin-top: 22rpx;
  color: #1a1a1a;
  font-size: 40rpx;
}

.need .desc {
  margin-top: 25rpx;
  font-size: 28rpx;
  line-height: 42rpx;
  color: #333;
}

.need .img-box {
  margin-top: 15rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
}

.need .img-box image {
}

.need .img-box.three image {
  width: 230rpx;
  height: 153.33rpx;
}

.need .img-box.two image {
  width: 348rpx;
  height: 232rpx;
}

.need .img-box.one image {
  width: 100%;
  height: 468rpx;
}