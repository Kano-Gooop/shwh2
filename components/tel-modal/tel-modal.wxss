.tel-modal {
  position: fixed;
  width: 100%;
  height: 100vh;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 200;
}

.tel-modal .content {
  position: absolute;
  width: 540rpx;
  margin: auto;
  left: 0;
  right: 0;
  top: 186rpx;
  padding: 46rpx 40rpx;
  background: #fff;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  overflow: visible;
}

.tel-modal .content .round {
  width: 264rpx;
  height: 264rpx;
}

.tel-modal .content .text {
  margin-top: 38rpx;
  line-height: 39rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.tel-modal .content .bind-btn {
  margin-top: 55rpx;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background-image: linear-gradient(45deg, #ffca36 0%, #ffb925 100%);
  border-radius: 8rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
}

.tel-modal .content .cha {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  bottom: -84rpx;
}